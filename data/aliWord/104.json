[["الْحُمْقُ شَقَاءٌ","غرر الحكم ودرر الكلم"],["الْحُمْقُ أَضَرُّ الْأَصْحَابِ","غرر الحكم ودرر الكلم"],["الْحُمْقُ أَدْوَأُ الدَّاءِ","غرر الحكم ودرر الكلم"],["الْحُمْقُ مِنْ ثِمَارِ الْجَهْلِ","غرر الحكم ودرر الكلم"],["الْحُمْقُ دَاءٌ لَا يُدَاوَى وَمَرَضٌ لَا يَبْرَأُ","غرر الحكم ودرر الكلم"],["أَفْقَرُ الْفَقْرِ الْحُمْقُ","غرر الحكم ودرر الكلم"],["أَضَرُّ شَيْ‏ءٍ الْحُمْقُ","غرر الحكم ودرر الكلم"],["بِئْسَ الدَّاءُ الْحُمْقُ","غرر الحكم ودرر الكلم"],["فَقْرُ الْحُمْقِ [الْأَحْمَقِ‏] لَا يُغْنِيهِ الْمَالُ","غرر الحكم ودرر الكلم"],["كُلُّ فَقْرٍ يُسَدُّ إِلَّا فَقْرَ الْحُمْقِ","غرر الحكم ودرر الكلم"],["لَا فَاقَةَ أَشَدُّ مِنَ الْحُمْقِ","غرر الحكم ودرر الكلم"],["لَا دَاءَ أَدْوَى مِنَ الْحُمْقِ","غرر الحكم ودرر الكلم"],["السَّفَهُ خُرْقٌ","غرر الحكم ودرر الكلم"],["سِلَاحُ الْجَهْلِ السَّفَهُ","غرر الحكم ودرر الكلم"],["لَيْسَ السَّفَهُ كَالْحِلْمِ","غرر الحكم ودرر الكلم"],["لَا يَعْرِفُ السَّفِيهُ حَقَّ الْحَلِيمِ","غرر الحكم ودرر الكلم"],["الْخُرْقُ [الخلق‏] شَرُّ خُلُقٍ","غرر الحكم ودرر الكلم"],["الْخُرْقُ [الْحُزْنُ‏] شَيْنُ الْخُلُقِ","غرر الحكم ودرر الكلم"],["مَا كَانَ الْخُرْقُ فِي شَيْ‏ءٍ إِلَّا شَانَهُ","غرر الحكم ودرر الكلم"],["لَا خُلَّةَ أَزْرَى مِنَ الْخُرْقِ","غرر الحكم ودرر الكلم"],["مِنْ أَقْبَحِ الشِّيَمِ الْغَبَاوَةُ","غرر الحكم ودرر الكلم"]]
[["الطَّمَعُ مِحْنَةٌ","غرر الحكم ودرر الكلم"],["الطَّمَعُ فَقْرٌ","غرر الحكم ودرر الكلم"],["الطَّمَعُ فَقْرٌ حَاصِرٌ [ظَاهِرٌ]","غرر الحكم ودرر الكلم"],["أَفْقَرُ النَّاسِ الطَّامِعُ","غرر الحكم ودرر الكلم"],["أَضَرُّ شَيْ‏ءٍ الطَّمَعُ","غرر الحكم ودرر الكلم"],["أَكْثَرُ مَصَارِعِ الْعُقُولِ تَحْتَ بُرُوقِ الْمَطَامِعِ","غرر الحكم ودرر الكلم"],["ثَمَرَةُ الطَّمَعِ الشَّقَاءُ","غرر الحكم ودرر الكلم"],["سَبَبُ فَسَادِ الْيَقِينِ الطَّمَعُ","غرر الحكم ودرر الكلم"],["مَنْ كَثُرَ طَمَعُهُ عَظُمَ مَصْرَعُهُ","غرر الحكم ودرر الكلم"],["مَنْ طَلَبَ الزِّيَادَةَ وَقَعَ فِي النُّقْصَانِ","غرر الحكم ودرر الكلم"],["لَا تَطْمَعْ فِي كُلِّ مَا تَسْمَعُ فَكَفَى بِذَلِكَ غِرَّةً","غرر الحكم ودرر الكلم"],["لَا تُطْمِعَنَّ نَفْسَكَ فِيمَا فَوْقَ الْكَفَافِ فَيَغْلِبَكَ بِالزِّيَادَةِ","غرر الحكم ودرر الكلم"],["لَا تَطْمَعْ فِي كُلِّ مَا تَسْمَعُ فَكَفَى بِذَلِكَ‏ حُمْقاً","غرر الحكم ودرر الكلم"],["يَسِيرُ الطَّمَعِ يُفْسِدُ كَثِيرَ الْوَرَعِ","غرر الحكم ودرر الكلم"],["لَا يُفْسِدُ الدِّينَ كَالطَّمَعِ","غرر الحكم ودرر الكلم"],["لَا يَسْلَمُ الدِّينُ مَعَ الطَّمَعِ","غرر الحكم ودرر الكلم"],["فَسَادُ الدِّينِ الطَّمَعُ","غرر الحكم ودرر الكلم"],["بِئْسَ قَرِينُ الدِّينِ الطَّمَعُ","غرر الحكم ودرر الكلم"]]
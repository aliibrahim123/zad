[["الذِّكْرُ مُجَالَسَةُ الْمَحْبُوبِ","غرر الحكم ودرر الكلم"],["الذِّكْرُ مِفْتَاحُ الْأُنْسِ","غرر الحكم ودرر الكلم"],["الذِّكْرُ لَذَّةُ الْمُحِبِّينَ","غرر الحكم ودرر الكلم"],["ذَاكِرُ اللَّهِ مُؤَانِسُهُ","غرر الحكم ودرر الكلم"],["ذَاكِرُ اللَّهِ سُبْحَانَهُ مُجَالِسُهُ","غرر الحكم ودرر الكلم"],["ذِكْرُ اللَّهِ قُوتُ النُّفُوسِ وَمُجَالَسَةُ الْمَحْبُوبِ","غرر الحكم ودرر الكلم"],["ذِكْرُ اللَّهِ مَسَرَّةُ كُلِّ مُتَّقٍ وَلَذَّةُ كُلِّ مُوقِنٍ","غرر الحكم ودرر الكلم"]]
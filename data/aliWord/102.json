[["الْعِلْمُ يُنْجِيكَ وَالْجَهْلُ يُرْدِيكَ","غرر الحكم ودرر الكلم"],["جَهْلُ الْغَنِيِّ يَضَعُهُ وَعِلْمُ الْفَقِيرِ يَرْفَعُهُ","غرر الحكم ودرر الكلم"],["رَأْيُ الْجَاهِلِ يُرْدِي","غرر الحكم ودرر الكلم"],["زِيَادَةُ الْجَهْلِ تُرْدِي","غرر الحكم ودرر الكلم"],["كَفَى بِالْجَهْلِ ضَعَةً","غرر الحكم ودرر الكلم"],["مَنْ جَهِلَ قَلَّ اعْتِبَارُهُ","غرر الحكم ودرر الكلم"]]
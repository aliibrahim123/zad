[["الْإِقْرَارُ اعْتِذَارٌ","غرر الحكم ودرر الكلم"],["الْإِنْكَارُ إِصْرَارٌ","غرر الحكم ودرر الكلم"],["الْمُقِرُّ بِالذُّنُوبِ [بِالذَّنْبِ‏] تَائِبٌ","غرر الحكم ودرر الكلم"],["الِاعْتِرَافُ شَفِيعُ الْجَانِي","غرر الحكم ودرر الكلم"],["رُبَّ جُرْمٍ أَغْنَى عَنِ الِاعْتِذَارِ عَنْهُ الْإِقْرَارُ بِهِ","غرر الحكم ودرر الكلم"],["شَافِعُ الْمُذْنِبِ إِقْرَارُهُ وَتَوْبَتُهُ اعْتِذَارُهُ","غرر الحكم ودرر الكلم"],["عَاصٍ يُقِرُّ بِذُنُوبِهِ خَيْرٌ مِنْ مُطِيعٍ يَفْتَخِرُ بِعَمَلِهِ","غرر الحكم ودرر الكلم"],["مَنِ اعْتَرَفَ بِالْجَرِيرَةِ اسْتَحَقَّ الْمَغْفِرَةَ","غرر الحكم ودرر الكلم"],["مَا أَخْلَقَ مَنْ عَرَفَ رَبَّهُ أَنْ يَعْتَرِفَ بِذَنْبِهِ","غرر الحكم ودرر الكلم"],["نِعْمَ شَافِعُ الْمُذْنِبِ الْإِقْرَارُ","غرر الحكم ودرر الكلم"],["لَا اعْتِذَارَ أَمْحَى لِلذَّنْبِ مِنَ الْإِقْرَارِ","غرر الحكم ودرر الكلم"],["إِذَا جَنَيْتَ فَاعْتَذِرْ","غرر الحكم ودرر الكلم"],["مَنْ أَحْسَنَ الِاعْتِذَارَ اسْتَحَقَّ الِاغْتِفَارَ","غرر الحكم ودرر الكلم"],["مَا أَذْنَبَ مَنِ اعْتَذَرَ","غرر الحكم ودرر الكلم"]]
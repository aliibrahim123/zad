[["اعْدِلْ تَحْكُمْ","غرر الحكم ودرر الكلم"],["اعْدِلْ تَمْلِكْ","غرر الحكم ودرر الكلم"],["بِالْعَدْلِ تَتَضَاعَفُ الْبَرَكَاتُ","غرر الحكم ودرر الكلم"],["بِالسِّيرَةِ الْعَادِلَةِ يُقْهَرُ الْمُنَاوِي","غرر الحكم ودرر الكلم"],["بِعَدْلِ الْمَنْطِقِ تَجِبُ الْجَلَالَةُ","غرر الحكم ودرر الكلم"],["فِي الْعَدْلِ صَلَاحُ [إِصْلَاحُ‏] الْبَرِيَّةِ","غرر الحكم ودرر الكلم"],["كَفَى بِالْعَدْلِ سَائِساً","غرر الحكم ودرر الكلم"],["مَنْ عَدَلَ عَظُمَ قَدْرُهُ","غرر الحكم ودرر الكلم"],["مَنْ عَمِلَ بِالْعَدْلِ حَصَّنَ اللَّهُ مُلْكَهُ","غرر الحكم ودرر الكلم"]]
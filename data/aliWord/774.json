{
"title": "باللّفظ المطلق وهو أربع وستون حكمة",
"type": "text",
"data": [
{
"text": "زَكاةُ السُّلْطانِ إِغاثَةُ الْمَلْهُوفِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَكاةُ الصِّحَّةِ السَّعْيُ في طاعَةِ اللهِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَكاةُ الشُّجاعَةِ الْجِهادُ في سَبيلِ اللهِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَكاةُ الْجَمالِ الْعَفافُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَكاةُ الْمالِ الْإِفْضالُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَكاةُ الْحِلْمِ الْإِحْتِمالُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَكاةُ الْقُدْرَةِ الْإِنْصافُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَكاةُ الظَّفرِ الْإِحْسانُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَلَّةُ اللِّسانَ أَنْكى مِنْ إِصابَةِ السِّنانِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَكاةُ الْبَدَنِ الْجِهادُ وَ الصِّيامُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَكاةُ الْيَسارِ بِرُّ الْجيرانِ وَ صِلَةُ الْأَرْحامِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَكاةُ النِّعَمِ اصْطِناعُ الْمَعْرُوفِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَكاةُ الْعِلْمِ بَذْلُهُ لِمُسْتَحَقِّه وَ إِجْهادُ النَّفْسِ بِالْعَمَلِ بِه.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَوالُ الدُّوَلِ بِاصْطِناعِ السُّفَّلِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زِيادَةُ الشُّكْرِ وَ صِلَةُ الرَّحِمِ تَزيدُ فِي الْعُمْرِ وَ تَفْسَحُ فِي الْأَجَلِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زِيادَةُ الدُّنْيا النُّقْصانُ فِي الْاخِرَةِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زُورُوا فِي اللهِ وَ جالِسُوا فِي اللهِ وَ أَعْطُوا فِي اللهِ وَ امْنَعُوا فِي اللهِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زايلُوا أَعْداءَ اللهِ وَ وَاصِلُوا أَوْلِياءَ اللهِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَخارِفُ الدُّنْيا تُفْسِدُ الْعُقُولَ الضَّعيفَةَ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَمَنُ الْعَادِلِ خَيرُ الْأَزْمِنَةِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَمانُ الْجائِرِ شَرُّ الْأَزْمِنَةِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زِيادَةُ الشَّرِّ دَنائةٌ وَ مَذَلَّةٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زينَةُ الْقُلُوبِ إِخْلاصُ الْإِيمانِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زينَةُ الْإِسْلامِ عَمَلُ الْإِحْسانِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زينَةُ الْبَواطِنِ أَجْمَلُ مِنْ زينَةِ الظَّواهِرِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زِنُوا أَنْفُسَكُمْ قَبْلَ أَنْ تُوازَنُوا وَ حاسِبُوها قَبْلَ أَنْ تُحاسَبُوا وَ تَنَفَّسُوا مِنْ ضيقِ الْخِناقِ قَبْلَ عُنْفِ السِّياقِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَكاةُ الْعِلْمِ نَشْرُهُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَكاةُ الْجاهِ بَذْلُهُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زِيادَةُ الْفِعْلِ عَلى الْقَوْلِ |أَحْسَنُ| فَضيلَةٍ وَ نَقْصُ الْفِعْلِ عَنِ الْقَوْلِ |أَقْبَحُ| رَذيلَةٍ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زِدْ مِنْ طُولِ أَمَلِكَ في قِصَرِ أَجَلِكَ وَلا يَغُرَّنَّكَ صحَّةُ جِسْمِكَ وَ سَلامةُ أَمْسِكَ فَإِنَّ مُدَّةَ الْعُمْرِ قَليلَةٌ وَ سَلامَةُ الْجِسْمِ مُسْتَحيلَةٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَيْنُ الْمُصاحَبَةِ الْإِحْتِمال.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَيْنُ الرِّياسَةِ الْإِفْضالُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَيْنُ الْعِلْمِ الْحِلْمُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَيْنُ الشِّيَمِ رَعْيُ الذِّمَمِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَيْنُ النِّعَمِ صِلَةُ الرَّحِمِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَيْنُ الْإِيْمانُ الْوَرَعُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَيْنُ الْعِبادَةِ الْخُشُوعُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَيْنُ الْحِكْمَةِ الزُّهْدُ فِي الدُّنْيا.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَيْنُ الدِّينِ الصَّبْرُ وَ الرِّضا.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَلَّةُ الْعالِمِ تُفْسِدُ الْعَوالِمَ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زِيارَةُ بَيتِ اللهِ أَمْنٌ مِنْ عَذابِ جَهَنَّمَ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَلَّةُ الْعالِمِ كَانْكِسارِ السَّفينَةِ تَغْرقُ وَيَغْرَقُ مَعَها غَيْرُها.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَوالُ النِّعَمِ بِمَنْعِ حُقُوقِ اللهِ مِنْها وَ إِهْمالِ شُكْرِها.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَيْنُ الدِّينِ الْعَقْلُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَيْنُ الْمَلكِ الْعَدْلُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَلَّةُ الرَّأْي تَأْتي عَلى الْمُلْكِ وَ تُؤْذِنُ بِالْهُلْكِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زُهْدُكَ فِي الدُّنْيا يُنْجيكَ وَ رَغْبَتُكَ فِي الدُّنْيا تُرْديكَ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَلَّةُ اللِّسانِ أَشَدُّ مِنْ حَدِّ السِّنانِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَلَّةُ اللِّسانِ تَأْتي عَلى الْإِنْسانِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَلَّةُ الْعاقِلِ مَحْذُورَةٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَلَّةُ الْجاهِلِ مَعْذُورَةٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَلَّةُ الْعاقِلِ شَديدُ النِّكايَةِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَلَّةُ الْعالِمِ كَبيرَةُ الْجِنايَةِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَلَّةُ الْقَدَمِ تُدْمي.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَلَّةُ اللِّسانِ تُرْدي.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زُهْدُ الرَّجُلِ فيما يَفْنى عَلى قَدْرِ يَقينه فيما يَبْقى.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زادُ الْمُؤْمِنِ إِلى الْاخِرَةِ الْوَرَعُ وَ التُّقى.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زُرْ فِي اللهِ أَهْلَ طاعَتِه وَ خُذِ الْهِدايَةَ مِنْ أَهْلِ وِلايَتِه.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "وَ قال عليه السّلام في ذكر الإِيمان: زُلْفى لِمَنِ ارْتَقَبَ وَ ثِقَةٌ لِمَنْ تَوَكَّلَ وَراحَةٌ لِمَنْ فَوَّضَ وَ جُنَّةٌ لِمَنْ صَبَرَ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زِدْ فِي اصْطِناعِ الْمَعْرُوفِ وَ أَكْثِرْ مِنْ إِسْداءِ الْإِحْسانِ فَإِنَّهُ أَبْقى ذُخْراً وَأَجْمَلُ ذِكْراً.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَلَّةُ الْمُتَوَقّي أَشَدُّ زَلَّةٍ وَ عِلَّةُ اللُّؤْمِ أَقْبَحُ عِلَّةٍ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَلَّةُ الْقَدَمِ أَقْرَبُ اسْتِدْراكٍ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زَلَّةُ اللِّسانِ أَشَدُّ هَلاكٍ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زِيادَةُ الْعَقْلِ تُنْجي.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زِيادَةُ الْجَهْلِ تُرْدي.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زِيادَةُ الشَّهْوَةِ تُزْري بِالْمُرُوَّةِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "زِيادَةُ الشُّحِّ تَشينُ الْفُتُوَّةَ وَ تُفْسِدُ الْاُخُوَّةَ.",
"source": "عيون الحكم والمواعظ"
}
]
}
{
"title": "بلفظ على وهو أربع وعشرون حكمة",
"type": "text",
"data": [
{
"text": "على قَدْرِ الْهِمَمِ تَكُونُ الْهُمُومُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "عَلى قَدْرِ الْفِتْنَةِ تَكُونُ الْغُمُومُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "عَلى قَدْرِ الْعَقْلِ يَكُونُ الْدِّينُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "عَلى قَدْرِ الْحَياءِ تَكُونُ الْعِفَّةُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "عَلى قَدْرِ الْحِرْمانِ تَكُونُ الْحِرْفَةُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "عَلى قَدْرِ الْعَقْلِ يَكُونُ الدين.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "عَلى قَدْرِ الْهِمَّةِ تَكُونُ الْحَمِيَّةُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "عَلى قَدْرِ الْحَمِيَّةِ تَكُونُ الْغَيرَةُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "عَلى قَدْرِ الْمُرُوءَ ةِ تَكُونُ السَّخاوَةُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "عَلى قَدْرِ شَرَفِ النَّفْسِ تَكُونُ الْمُرُوءَ ةُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "عَلى قَدْرِ الْمُصيبَةِ تَكُونُ الْمَثُوبَةُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "عَلى قَدْرِ الْمَؤُنَةِ تَكُونُ مِنَ اللهِ الْمَعُونَةُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "عَلى قَدْرِ الرَّأْيِ تَكُونُ الْعَزيمَةُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "عَلى قَدْرِ الْعَقْلِ تَكُونُ الطّاعَةُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "عَلى قَدْرِ الْعِفَّةِ تَكُونُ الْقَناعَةُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "عَلى قَدْرِ الْحَمِيَّةِ تَكُونُ الشَّجاعَةُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "عَلى قَدْرِ النَّعْماءِ يَكُونُ |مَضَضُ| الْبَلاءُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "عَلى قَدْرِ الْبَلاءِ يَكُونُ الْجَزاءُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "عَلى قَدْرِ الْإِنْصافِ تَرْسَخُ الْمَوَدَّةُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "عَلى قَدْرِ التَّآخي فِي اللهِ تَخْلُصُ الْمَحَبَّةُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "عَلى قَدْرِ |قُوَّةِ الدِّينِ يَكُونُ خُلُوصُ النِّيَّةِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "عَلى حُسْنِ النِّيَّةِ تَكُونُ مِنَ اللهِ الْعَطِيَّةُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "عَلى النّاصِحِ الْإِجْتِهادُ فِي الرَّأْيِ وَ لَيْسَ عَليْهِ الضَّمانُ فِي النُّجْح.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "عَلى الشَّكِّ وَ قِلَّةِ الثِّقَةِ بِاللهِ مَبْنَى الْحِرْصِ وَ الشُّحِّ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "عَلى الْعالِمِ أَنْ يَعْمَلَ بِما عَلِمَ ثُمَّ يطْلُبُ تَعَلُّمَ ما لَمْ يَعْلمُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "عَلى الْمُتَعَلِّمِ أَنْ يَدْأَبَ نَفْسَهُ في طَلَبِ الْعِلمِ وَ لا يَمُلَّ مِنْ تَعَلُّمِه وَ لا يَسْتَكْثِرَ ما عَلِمَ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "عَلى الصِّدْقِ وَ الْأَمانِ مَبْنَى الْإِيمانِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "عَلى الْإِمامِ أَنْ يُعلِّمَ أَهْلَ وَلايَتِه حُدُودَ الْإِسْلامِ وَ الْإِيمانِ.",
"source": "عيون الحكم والمواعظ"
}
]
}
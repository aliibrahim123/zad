{
"title": "بلفظ آفة وهو خمس وَ خمسون حكمة",
"type": "text",
"data": [
{
"text": "آفَةُ الْمُلُوكِ سُوءُ السِّيرَةِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْوُزَراءِ سُوءُ السَّريرَةِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْوَفاءِ الْغَدْرُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْحَزْمِ فَوْتُ الْأَمْرِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْكَلامِ الْإِطالَةُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْخَيْرِ قَرينُ السَّوْءِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْعَمَلِ الْبَطالَةُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْإِقْتِدارِ الْبَغْيُ وَ الْعُتُوُّ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْعِلْمِ تَرْكُ الْعَمَلِ بِه.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْعَمَلِ تَرْكُ الْإِخْلاصِ فيهِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْعُلَماءِ حُبُّ الرِّياسَةِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الزُّعَماءِ ضَعْفُ السِّياسَةِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْإِيْمانِ الشِّرْكُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْيَقينِ الشَّكُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الشَّرَفِ الْكِبْرُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الذُّكاءِ الْمَكْرُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ النُّجْحِ الْكَسَلُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْأَمَلِ الْأَجَلُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْغِنَى البُخْلُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْأَعْمالِ عَجْزُ الْعُمّالِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْامالِ حُضُورُ الْاجالِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الرِّئاسَةِ الْفَخْرُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْجُودِ الْفَقْرُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ اللُّبِّ الْعُجْبُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْحَديثِ الْكِذْبُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْعُمْرانِ جَوْرُ السُّلْطانِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْقُدْرَةِ مَنْعُ الْإِحْسانِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْعامَّةِ الْعالِمُ الْفاجِرُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْعَدْلِ السُّلْطانُ الْجائِرُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْأَمانَةِ الْخِيانَةُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْفُقَهاءِ عُدْمُ الصِّيانَةِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْجُودِ التَّبْذيرُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْمَعاشِ سُوءُ التَّدْبيرِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ النِّعَمِ الْكُفْرانُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الطّاعَةِ الْعِصْيانُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْعِبادَةِ الرِّياءُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْمَجْدِ عَوائِقُ الْقَضاءِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ السَّخاءِ الْمَنُّ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الدِّيْنِ سُوءُ الظَّنِّ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْعَقْلِ الْوَلَهُ بِالدُّنْيا.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْهَيْبَةِ الْمِزاحُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْطَّلَبِ عَدَمُ النَّجاح.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْعُهُودِ قِلَّةُ الرِّعايَةِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ النَّقْلِ كِذْبُ الرِّوايَةِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ القُضاةِ الطَّمَعُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْعُدُولِ قِلَّةُ الْوَرَعِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْجُنْدِ مُخالَفَةُ الْقادَةِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الرِّياضَةِ غَلَبَةُ الْعادَةِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الرَّعِيَّةِ قِلَّةُ الطّاعَةِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْوَرَعُ قِلَّةُ الْقَناعَةِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الشُّجاعَةِ إِضَاعَةُ الْحَزْمِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْقَوِىَّ اسْتِضْعافُ الْخَصْم.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْحِلْمِ الذُّلُّ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "آفَةُ الْعَطَاءِ المَطَلُ.",
"source": "عيون الحكم والمواعظ"
}
]

[["الْحَسَدُ يُنَكِّدُ الْعَيْشَ","غرر الحكم ودرر الكلم"],["أَسْوَءُ النَّاسِ عَيْشاً الْحَسُودُ","غرر الحكم ودرر الكلم"],["لَا عَيْشَ أَنْكَدُ مِنْ عَيْشِ الْحَسُودِ وَالْحَقُودِ","غرر الحكم ودرر الكلم"],["مَا أَقَلَّ رَاحَةَ الْحَسُودِ","غرر الحكم ودرر الكلم"],["لَا رَاحَةَ لِحَسُودٍ","غرر الحكم ودرر الكلم"],["الْحَسَدُ يُضْنِي","غرر الحكم ودرر الكلم"],["الْحَسَدُ يُذِيبُ الْجَسَدَ","غرر الحكم ودرر الكلم"],["الْحَسَدُ يُضْنِي الْجَسَدَ","غرر الحكم ودرر الكلم"],["الْعَجَبُ لِغَفْلَةِ الْحُسَّادِ عَنْ سَلَامَةِ الْأَجْسَادِ","غرر الحكم ودرر الكلم"],["عَجِبْتُ لِغَفْلَةِ الْحُسَّادِ عَنْ سَلَامَةِ الْأَجْسَادِ","غرر الحكم ودرر الكلم"]]
[["الْعَجْزُ مَضْيَعَةٌ","غرر الحكم ودرر الكلم"],["الْعِيُّ حَصَرٌ","غرر الحكم ودرر الكلم"],["الْعَجْزُ [الْجَزَعُ‏] إِضَاعَةٌ","غرر الحكم ودرر الكلم"],["الْعَجْزُ سَبَبُ التَّضْيِيعِ","غرر الحكم ودرر الكلم"],["الْعَجْزُ يُطْمِعُ الْأَعْدَاءَ","غرر الحكم ودرر الكلم"],["الْعَجْزُ شَرُّ مَطِيَّةٍ","غرر الحكم ودرر الكلم"],["الْعَجْزُ يُثْمِرُ الْهَلَكَةَ","غرر الحكم ودرر الكلم"],["أَعْجَزُ النَّاسِ مَنْ قَدَرَ عَلَى أَنْ يُزِيلَ النَّقْصَ عَنْ نَفْسِهِ وَلَمْ يَفْعَلْ","غرر الحكم ودرر الكلم"],["أَعْجَزُ النَّاسِ آمَنُهُمْ لِوُقُوعِ الْحَوَادِثِ وَهُجُومِ الْأَجَلِ","غرر الحكم ودرر الكلم"],["ثَمَرَةُ الْعَجْزِ فَوْتُ الطَّلَبِ","غرر الحكم ودرر الكلم"]]
[["الْجَهْلُ مَعْدِنُ الشَّرِّ","غرر الحكم ودرر الكلم"],["الْجَهْلُ دَاءٌ وَعَيَاءٌ","غرر الحكم ودرر الكلم"],["الْجَهْلُ أَدْوَأُ الدَّاءِ","غرر الحكم ودرر الكلم"],["الْجَهْلُ أَصْلُ كُلِّ شَرٍّ","غرر الحكم ودرر الكلم"],["الْجَهْلُ فَسَادُ كُلِّ أَمْرٍ","غرر الحكم ودرر الكلم"],["الْجَهْلُ وَالْبُخْلُ مَسَاءَةٌ [شَنَاءَةٌ] وَمَضَرَّةٌ","غرر الحكم ودرر الكلم"],["الْجَهْلُ فِي الْإِنْسَانِ أَضَرُّ مِنَ الْآكِلَةِ فِي الْبَدَنِ","غرر الحكم ودرر الكلم"],["أَسْوَأُ السُّقْمِ [الْقِسْمِ‏] الْجَهْلُ","غرر الحكم ودرر الكلم"],["أَشْقَى النَّاسِ الْجَاهِلُ","غرر الحكم ودرر الكلم"],["بِالْجَهْلِ يُسْتَثَارُ كُلُّ شَرٍّ","غرر الحكم ودرر الكلم"],["لَا سَوْأَةَ أَشْيَنُ مِنَ الْجَهْلِ","غرر الحكم ودرر الكلم"],["السَّفَهُ جَرِيرَةٌ","غرر الحكم ودرر الكلم"]]
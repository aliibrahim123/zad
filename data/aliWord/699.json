[["الْجَوْرُ مِمْحَاةٌ [مهواة]","غرر الحكم ودرر الكلم"],["الظُّلْمُ يُدَمِّرُ الدِّيَارَ","غرر الحكم ودرر الكلم"],["الْبَغْيُ سَائِقٌ [سَابِقٌ‏] إِلَى الْحَيْنِ","غرر الحكم ودرر الكلم"],["الْجَوْرُ أَحَدُ الْمُدَمِّرِينَ","غرر الحكم ودرر الكلم"],["أَعْجَلُ شَيْ‏ءٍ صَرْعَةً [سُرْعَةً] الْبَغْيُ","غرر الحكم ودرر الكلم"],["مَنْ ظَلَمَ دَمَرَ عَلَيْهِ ظُلْمُهُ","غرر الحكم ودرر الكلم"],["مَنْ جَارَ أَهْلَكَهُ جَوْرُهُ","غرر الحكم ودرر الكلم"],["مَنْ ظَلَمَ عَظُمَتْ صَرْعَتُهُ","غرر الحكم ودرر الكلم"],["مَنْ ظَلَمَ أَوْبَقَهُ ظُلْمُهُ","غرر الحكم ودرر الكلم"],["مَنْ ظَلَمَ قَصَمَ عُمُرَهُ وَدَمَرَ عَلَيْهِ ظُلْمُهُ","غرر الحكم ودرر الكلم"]]
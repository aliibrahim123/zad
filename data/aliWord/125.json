[["ثَمَرَةُ الدِّينِ قُوَّةُ الْيَقِينِ","غرر الحكم ودرر الكلم"],["حُسْنُ الدِّينِ مِنْ قُوَّةِ الْيَقِينِ","غرر الحكم ودرر الكلم"],["صَلَاحُ الدِّينِ بِحُسْنِ الْيَقِينِ","غرر الحكم ودرر الكلم"],["عَلَى قَدْرِ الدِّينِ تَكُونُ قُوَّةُ الْيَقِينِ","غرر الحكم ودرر الكلم"],["أَفْضَلُ الدِّينِ الْيَقِينُ","غرر الحكم ودرر الكلم"]]
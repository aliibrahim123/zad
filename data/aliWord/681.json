[["اطْلُبْ تَجِدْ","غرر الحكم ودرر الكلم"],["رُبَّ سَاعٍ سَرِيعٌ نَجَا وَطَالِبٌ بَطِي‏ءٌ رَجَا","غرر الحكم ودرر الكلم"],["قَدْ سَعِدَ مَنْ جَدَّ","غرر الحكم ودرر الكلم"],["قُرِنَ الِاجْتِهَادُ بِالْوِجْدَانِ","غرر الحكم ودرر الكلم"],["مَنْ تَوَخَّى الصَّوَابَ أَنْجَحَ [نجح‏]","غرر الحكم ودرر الكلم"],["مَنْ رَكِبَ جِدَّهُ قَهَرَ ضِدَّهُ","غرر الحكم ودرر الكلم"],["مَنْ غَالَبَ الضِّدَّ رَكِبَ الْجِدَّ","غرر الحكم ودرر الكلم"],["مَنْ أَعْمَلَ اجْتِهَادَهُ بَلَغَ مُرَادَهُ","غرر الحكم ودرر الكلم"],["مَنْ بَذَلَ جُهْدَ طَاقَتِهِ بَلَغَ كُنْهَ إِرَادَتِهِ","غرر الحكم ودرر الكلم"],["مَنْ طَلَبَ شَيْئاً نَالَهُ أَوْ بَعْضَهُ","غرر الحكم ودرر الكلم"],["مَا أَقْرَبَ النَّجَاحَ مِمَّنْ عَجَّلَ السَّرَاحَ","غرر الحكم ودرر الكلم"]]
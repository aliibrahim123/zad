[["الْجُودُ رِيَاسَةٌ الْمُلْكُ سِيَاسَةٌ","غرر الحكم ودرر الكلم"],["الْكَرَمُ أَفْضَلُ [أَشْرَفُ‏] السُّؤْدَدِ","غرر الحكم ودرر الكلم"],["الْمَالُ يُكْرِمُ صَاحِبَهُ مَا بَذَلَهُ وَيُهِينُهُ مَا بَخِلَ بِهِ","غرر الحكم ودرر الكلم"],["اسْمَحْ تُكْرَمْ","غرر الحكم ودرر الكلم"],["أَفْضِلْ تُقَدَّمْ","غرر الحكم ودرر الكلم"],["اسْمَحْ تَسُدْ","غرر الحكم ودرر الكلم"],["إِنَّمَا سَادَةُ أَهْلِ الدُّنْيَا [وَ الْآخِرَةِ] الْأَجْوَادُ","غرر الحكم ودرر الكلم"],["بِالْإِفْضَالِ تُعْظَمُ الْأَقْدَارُ","غرر الحكم ودرر الكلم"],["بِالْجُودِ تَكُونُ السِّيَادَةُ","غرر الحكم ودرر الكلم"],["بِالْجُودِ تَسُودُ الرِّجَالُ","غرر الحكم ودرر الكلم"],["بِكَثْرَةِ الِاحْتِمَالِ يَكْثُرُ الْفَضْلُ","غرر الحكم ودرر الكلم"],["بِالْجُودِ يُبْتَنَي الْمَجْدُ وَيُجْتَلَبُ الْحَمْدُ","غرر الحكم ودرر الكلم"],["تَفَضَّلْ تُخْدَمْ وَاحْلُمْ تُقَدَّمْ","غرر الحكم ودرر الكلم"],["جُدْ تَسُدْ وَاصْبِرْ تَظْفَرْ","غرر الحكم ودرر الكلم"],["جُودُ الْفَقِيرِ يُجِلُّهُ وَبُخْلُ الْغَنِيِّ يُذِلُّهُ","غرر الحكم ودرر الكلم"],["سَبَبُ السِّيَادَةِ السَّخَاءُ","غرر الحكم ودرر الكلم"],["سَادَةُ أَهْلِ الْجَنَّةِ الْأَسْخِيَاءُ وَالْمُتَّقُونَ","غرر الحكم ودرر الكلم"],["سَادَةُ النَّاسِ فِي الدُّنْيَا الْأَسْخِيَاءُ وَفِي الْآخِرَةِ الْأَتْقِيَاءُ","غرر الحكم ودرر الكلم"],["مَنْ بَذَلَ مَالَهُ جَلَّ","غرر الحكم ودرر الكلم"],["مَنْ جَادَ سَادَ","غرر الحكم ودرر الكلم"],["لَا سِيَادَةَ لِمَنْ لَا سَخَاءَ لَهُ","غرر الحكم ودرر الكلم"]]
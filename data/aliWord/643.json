[["الْفَقْدُ الْمُمْرِضُ فَقْدُ الْأَحْبَابِ","غرر الحكم ودرر الكلم"],["الْغَرِيبُ مَنْ لَيْسَ لَهُ حَبِيبٌ","غرر الحكم ودرر الكلم"],["فَقْدُ الْأَحِبَّةِ غُرْبَةٌ","غرر الحكم ودرر الكلم"],["فَقْدُ الْإِخْوَانِ مُوهِي الْجَلَدِ","غرر الحكم ودرر الكلم"],["مَنْ لَا إِخَاءَ لَهُ لَا خَيْرَ فِيهِ","غرر الحكم ودرر الكلم"],["مَنْ لَا إِخْوَانَ لَهُ لَا أَهْلَ لَهُ","غرر الحكم ودرر الكلم"],["مَنْ لَا صَدِيقَ لَهُ لَا ذُخْرَ لَهُ","غرر الحكم ودرر الكلم"],["مَنْ فَقَدَ أَخاً فِي اللَّهِ فَكَأَنَّمَا فَقَدَ أَشْرَفَ أَعْضَائِهِ","غرر الحكم ودرر الكلم"],["مِنْ عَجْزِ الرَّأْيِ اسْتِفْسَادُ [استسفاد] الْإِخْوَانِ","غرر الحكم ودرر الكلم"],["لَا تَقْطَعْ صَدِيقاً وَإِنْ كَفَرَ","غرر الحكم ودرر الكلم"],["لَا عَيْشَ لِمَنْ فَارَقَ أَحِبَّتَهُ","غرر الحكم ودرر الكلم"]]
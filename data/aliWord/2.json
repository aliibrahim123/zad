[["غَايَةُ الْفَضَائِلِ الْعِلْمُ","غرر الحكم ودرر الكلم"],["رَأْسُ الْفَضَائِلِ الْعِلْمُ","غرر الحكم ودرر الكلم"],["الْعِلْمُ أَصْلُ كُلِّ خَيْرٍ","غرر الحكم ودرر الكلم"],["الْعِلْمُ أَعْلَى فَوْزٍ","غرر الحكم ودرر الكلم"],["الْعِلْمُ لِقَاحُ الْمَعْرِفَةِ","غرر الحكم ودرر الكلم"],["الْعُلُومُ نُزْهَةُ الْأُدَبَاءِ","غرر الحكم ودرر الكلم"],["الْعِلْمُ أَفْضَلُ الْأَنِيسَيْنِ","غرر الحكم ودرر الكلم"],["مَنْ خَلَا بِالْعِلْمِ لَمْ تُوحِشْهُ خَلْوَةٌ","غرر الحكم ودرر الكلم"],["غِنَى الْعَاقِلِ بِعِلْمِهِ","غرر الحكم ودرر الكلم"],["الْعِلْمُ لَا يَنْتَهِي","غرر الحكم ودرر الكلم"],["لَا سَمِيرَ كَالْعِلْمِ","غرر الحكم ودرر الكلم"],["شَيْئَانِ لَا تُبْلَغُ غَايَتُهُمَا الْعِلْمُ وَالْعَقْلُ","غرر الحكم ودرر الكلم"],["الْعِلْمُ يُنْجِيكَ الْجَهْلُ يُرْدِيكَ","غرر الحكم ودرر الكلم"],["الْعِلْمُ يُنْجِدُ الْحِكْمَةُ تُرْشِدُ","غرر الحكم ودرر الكلم"],["الْعِلْمُ وِرَاثَةٌ كَرِيمَةٌ وَنِعْمَةٌ عَمِيمَةٌ","غرر الحكم ودرر الكلم"],["عَلَيْكَ بِالْعِلْمِ فَإِنَّهُ وِرَاثَةٌ كَرِيمَةٌ","غرر الحكم ودرر الكلم"],["حَسَبُ الْمَرْءِ عِلْمُهُ وَجَمَالُهُ عَقْلُهُ","غرر الحكم ودرر الكلم"],["الْعِلْمُ حَاكِمٌ وَالْمَالُ مَحْكُومٌ عَلَيْهِ","غرر الحكم ودرر الكلم"],["الْعِلْمُ خَيْرٌ مِنَ الْمَالِ الْعِلْمُ يَحْرُسُكَ وَأَنْتَ تَحْرُسُ الْمَالَ‏","غرر الحكم ودرر الكلم"]]
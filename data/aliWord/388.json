[["الْوَعْدُ مَرَضٌ وَالْبُرْءُ إِنْجَازُهُ","غرر الحكم ودرر الكلم"],["آفَةُ الْعُهُودِ قِلَّةُ الرِّعَايَةِ","غرر الحكم ودرر الكلم"],["آفَةُ الْوَفَاءِ الْغَدْرُ","غرر الحكم ودرر الكلم"],["غَيْرُ مُوفٍ بِالْعُهُودِ مَنْ أَخْلَفَ الْوُعُودَ","غرر الحكم ودرر الكلم"],["لِكُلِّ نَاكِثٍ شُبْهَةٌ","غرر الحكم ودرر الكلم"],["مَنْ أَخْفَرَ ذِمَّةً اكْتَسَبَ مَذَمَّةً","غرر الحكم ودرر الكلم"],["مَنْ سَاءَ عَقْدُهُ سَرَّ فَقْدُهُ","غرر الحكم ودرر الكلم"],["مَنْ ذَا الَّذِي يَثِقُ بِكَ إِذَا غَدَرْتَ بِذَوِي رَحِمِكَ","غرر الحكم ودرر الكلم"],["مِنْ عَلَامَاتِ اللُّؤْمِ الْغَدْرُ بِالْمَوَاثِيقِ","غرر الحكم ودرر الكلم"],["مِنْ أَفْحَشِ الْخِيَانَةِ خِيَانَةُ الْوَدَائِعِ","غرر الحكم ودرر الكلم"],["مَا أَنْجَزَ الْوَعْدَ مَنْ مَطَلَ بِهِ","غرر الحكم ودرر الكلم"],["مَا أَيْقَنَ بِاللَّهِ مَنْ لَمْ يَرْعَ عُهُودَهُ وَذِمَّتَهُ [ذِمَمَهُ‏]","غرر الحكم ودرر الكلم"],["وَعْدُ اللَّئِيمِ تَسْوِيفٌ وَتَعْلِيلٌ","غرر الحكم ودرر الكلم"],["لَا تَحُلَّنَّ عَقْداً يُعْجِزُكَ إِيثَاقُهُ","غرر الحكم ودرر الكلم"],["لَا تَعِدَنَّ عِدَةً لَا تَثِقُ مِنْ نَفْسِكَ بِإِنْجَازِهَا","غرر الحكم ودرر الكلم"],["غَدْرُ الرَّجُلِ مَسَبَّةٌ عَلَيْهِ","غرر الحكم ودرر الكلم"]]
[["الْهَمُّ يُنْحِلُ الْبَدَنَ","غرر الحكم ودرر الكلم"],["الْغَمُّ مَرَضُ النَّفْسِ","غرر الحكم ودرر الكلم"],["الْحُزْنُ يَهْدِمُ الْجَسَدَ","غرر الحكم ودرر الكلم"],["الْأَحْزَانُ سُقْمُ الْقُلُوبِ","غرر الحكم ودرر الكلم"],["الْهَمُّ يُذِيبُ الْجَسَدَ","غرر الحكم ودرر الكلم"],["الْهَمُّ أَحَدُ الْهِرَمَيْنِ","غرر الحكم ودرر الكلم"],["الْغَمُّ يَقْبِضُ النَّفْسَ وَيَطْوِي الِانْبِسَاطَ","غرر الحكم ودرر الكلم"],["أَقْبَحُ الْعِيِّ الضَّجَرُ","غرر الحكم ودرر الكلم"],["مَنِ اسْتَدَامَ الْهَمَّ غَلَبَ عَلَيْهِ الْحُزْنُ","غرر الحكم ودرر الكلم"],["مَنْ كَثُرَ غَمُّهُ تَأَبَّدَ حُزْنُهُ","غرر الحكم ودرر الكلم"],["مَنْ كَثُرَ هَمُّهُ سَقِمَ بَدَنُهُ","غرر الحكم ودرر الكلم"],["لَا تُشْعِرْ قَلْبَكَ الْهَمَّ عَلَى مَا فَاتَ فَيَشْغَلَكَ [عَنِ الِاسْتِعْدَادِ] عَمَّا هُوَ آتٍ","غرر الحكم ودرر الكلم"],["لَا لَذَّةَ بِتَنْغِيصٍ","غرر الحكم ودرر الكلم"]]
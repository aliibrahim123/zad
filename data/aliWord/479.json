[["الشَّرَهُ دَاعِيَةُ الشَّرِّ","غرر الحكم ودرر الكلم"],["الشَّرَهُ أَوَّلُ الطَّمَعِ","غرر الحكم ودرر الكلم"],["الشَّرَهُ سَجِيَّةُ الْأَرْجَاسِ","غرر الحكم ودرر الكلم"],["الشَّرَهُ جَامِعٌ لِمَسَاوِي الْعُيُوبِ","غرر الحكم ودرر الكلم"],["الشَّرَهُ أُسُّ كُلِّ شَرٍّ","غرر الحكم ودرر الكلم"],["الشَّرَهُ مِنْ مَسَاوِي الْأَخْلَاقِ","غرر الحكم ودرر الكلم"],["احْذَرُوا الشَّرَهَ فَإِنَّهُ خُلُقٌ مُرْدِي","غرر الحكم ودرر الكلم"],["احْذَرِ الشَّرَهَ فَكَمْ [مِنْ‏] أَكْلَةٍ مَنَعَتْ أَكَلَاتٍ","غرر الحكم ودرر الكلم"],["إِيَّاكَ وَالشَّرَهَ فَإِنَّهُ رَأْسُ كُلِّ دَنِيَّةٍ وَأُسُّ كُلِّ رَذِيلَةٍ","غرر الحكم ودرر الكلم"],["بِالشَّرَهِ تُشَانُ الْأَخْلَاقُ","غرر الحكم ودرر الكلم"],["بِئْسَ الطَّبْعُ [الطَّمَعُ‏] الشَّرَهُ","غرر الحكم ودرر الكلم"],["رَأْسُ الْمَعَايِبِ الشَّرَهُ","غرر الحكم ودرر الكلم"],["كَفَى بِالشَّرَهِ هُلْكاً","غرر الحكم ودرر الكلم"],["لِكُلِّ شَيْ‏ءٍ بَذْرٌ وَبَذْرُ الشَّرِّ الشَّرَهُ","غرر الحكم ودرر الكلم"],["مَا دُونَ الشَّرَهِ عَفَافٌ","غرر الحكم ودرر الكلم"],["يُسْتَدَلُّ عَلَى شَرِّ الرَّجُلِ بِكَثْرَةِ شَرَهِهِ وَشِدَّةِ طَمَعِهِ","غرر الحكم ودرر الكلم"]]
[["الصِّدْقُ نَجَاحٌ الْكَذِبُ فَضَّاحٌ","غرر الحكم ودرر الكلم"],["الصِّدْقُ يُنْجِي الْكَذِبُ يُرْدِي الْبُخْلُ يُزْرِي","غرر الحكم ودرر الكلم"],["الصِّدْقُ نَجَاةٌ [مَنْجَاةٌ] وَكَرَامَةٌ","غرر الحكم ودرر الكلم"],["النَّجَاةُ مَعَ الصِّدْقِ","غرر الحكم ودرر الكلم"],["الصِّدْقُ يُنْجِيكَ وَإِنْ خِفْتَهُ","غرر الحكم ودرر الكلم"],["الصَّادِقُ عَلَى شَرَفِ مَنْجَاةٍ وَكَرَامَةٍ","غرر الحكم ودرر الكلم"],["اصْدُقْ تُنْجِحْ","غرر الحكم ودرر الكلم"],["الْزَمِ الصِّدْقَ وَإِنْ خِفْتَ ضَرَّهُ فَإِنَّهُ خَيْرٌ لَكَ مِنَ الْكَذِبِ الْمَرْجُوِّ نَفْعُهُ","غرر الحكم ودرر الكلم"],["أَنْجَحُكُمْ أَصْدَقُكُمْ [أَصْدَقُكُمْ أَكْيَسُكُمْ‏]","غرر الحكم ودرر الكلم"],["بِالصِّدْقِ تَكُونُ النَّجَاةُ","غرر الحكم ودرر الكلم"],["عَاقِبَةُ الصِّدْقِ نَجَاةٌ وَسَلَامَةٌ","غرر الحكم ودرر الكلم"],["مَنْ قَالَ بِالصِّدْقِ أَنْجَحَ","غرر الحكم ودرر الكلم"],["مَنْ صَدَقَ نَجَا","غرر الحكم ودرر الكلم"],["لَا سَبِيلَ أَنْجَى مِنَ الصِّدْقِ","غرر الحكم ودرر الكلم"]]
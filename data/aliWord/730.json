[["التَّأَنِّي حَزْمٌ","غرر الحكم ودرر الكلم"],["التَّأَنِّي يُوجِبُ الِاسْتِظْهَارَ","غرر الحكم ودرر الكلم"],["فِي التَّأَنِّي اسْتِظْهَارٌ","غرر الحكم ودرر الكلم"],["الْمُتَأَنِّي حَرِيٌّ بِالْإِصَابَةِ","غرر الحكم ودرر الكلم"],["الْمُتَأَنِّي مُصِيبٌ وَإِنْ هَلَكَ","غرر الحكم ودرر الكلم"],["أَصَابَ مُتَأَنٍّ أَوْ كَادَ أَخْطَأَ [أحطأ] مُسْتَعْجِلٌ أَوْ كَادَ","غرر الحكم ودرر الكلم"],["التَّأَنِّي فِي الْفِعْلِ [الْعَقْلِ‏] يُؤْمِنُ الْخَطَلَ","غرر الحكم ودرر الكلم"],["بِالتَّأَنِّي تَسْهَلُ الْمَطَالِبُ","غرر الحكم ودرر الكلم"],["بِالتَّأَنِّي تَسْهَلُ الْأَسْبَابُ","غرر الحكم ودرر الكلم"],["رَوِيَّةُ الْمُتَأَنِّي أَفْضَلُ مِنْ بَدِيهَةِ الْعَجِلِ","غرر الحكم ودرر الكلم"],["عَلَيْكَ بِالْأَنَاةِ فَإِنَّ الْمُتَأَنِّيَ حَرِيٌّ بِالْإِصَابَةِ","غرر الحكم ودرر الكلم"],["مَنِ اتَّأَدَ أَمِنَ مِنَ الزَّلَلِ","غرر الحكم ودرر الكلم"],["لَا تَكُنْ فِيمَا تُورِدُ كَحَاطِبِ لَيْلٍ وَغُثَاءِ سَيْلٍ","غرر الحكم ودرر الكلم"],["لَا إِصَابَةَ لِمَنْ لَا أَنَاةَ لَهُ","غرر الحكم ودرر الكلم"]]
[["الصَّبْرُ مَدْفَعَةٌ","غرر الحكم ودرر الكلم"],["الصَّبْرُ يُنَاضِلُ الْحَدَثَانَ","غرر الحكم ودرر الكلم"],["الصَّبْرُ يُمَحِّصُ الرَّزِيَّةِ","غرر الحكم ودرر الكلم"],["الصَّبْرُ أَدْفَعُ لِلْبَلَاءِ","غرر الحكم ودرر الكلم"],["الصَّبْرُ أَدْفَعُ لِلضَّرَرِ","غرر الحكم ودرر الكلم"],["بِالصَّبْرِ تَخِفُّ الْمِحْنَةُ","غرر الحكم ودرر الكلم"],["عَلَيْكَ بِالصَّبْرِ وَالِاحْتِمَالِ فَمَنْ لَزِمَهُمَا هَانَتْ عَلَيْهِ الْمِحَنُ","غرر الحكم ودرر الكلم"],["مَنْ صَبَرَ خَفَّتْ مِحْنَتُهُ","غرر الحكم ودرر الكلم"],["لَا تُدْفَعُ الْمَكَارِهُ إِلَّا بِالصَّبْرِ","غرر الحكم ودرر الكلم"]]
[["الْإِعْجَابُ يَمْنَعُ الِازْدِيَادَ","غرر الحكم ودرر الكلم"],["الْعُجْبُ يَمْنَعُ الِازْدِيَادَ","غرر الحكم ودرر الكلم"],["الْعُجْبُ بِالْحَسَنَةِ يُحْبِطُهَا","غرر الحكم ودرر الكلم"],["الْعُجْبُ آفَةُ الشَّرَفِ [السرف‏]","غرر الحكم ودرر الكلم"],["إِيَّاكَ [وَ] أَنْ تُعْجَبَ بِنَفْسِكَ فَيَظْهَرَ عَلَيْكَ النَّقْصُ وَالشَّنَآنُ","غرر الحكم ودرر الكلم"],["أَوْحَشُ الْوَحْشَةِ الْعُجْبُ","غرر الحكم ودرر الكلم"],["ثَمَرَةُ الْعُجْبِ الْبَغْضَاءُ","غرر الحكم ودرر الكلم"],["لَيْسَ لِمُعْجَبٍ رَأْيٌ","غرر الحكم ودرر الكلم"],["مَنْ عَظَّمَ نَفْسَهُ حُقِّرَ","غرر الحكم ودرر الكلم"],["مَنْ أُعْجِبَ بِنَفْسِهِ سُخِرَ بِهِ","غرر الحكم ودرر الكلم"],["مَنْ أَعْجَبَتْهُ آرَاؤُهُ غَلَبَتْهُ أَعْدَاؤُهُ","غرر الحكم ودرر الكلم"],["مَنْ أُعْجِبَ بِرَأْيِهِ مَلَكَهُ الْعَجْزُ","غرر الحكم ودرر الكلم"],["مَنْ كَثُرَ إِعْجَابُهُ قَلَّ صَوَابُهُ","غرر الحكم ودرر الكلم"],["مَنْ أُعْجِبَ بِعَمَلِهِ أَحْبَطَ أَجْرَهُ","غرر الحكم ودرر الكلم"],["مَنْ أُعْجِبَ بِحُسْنِ حَالَتِهِ قَصَّرَ عَنْ حُسْنِ حِيلَتِهِ","غرر الحكم ودرر الكلم"],["مَنْ ظَنَّ بِنَفْسِهِ خَيْراً فَقَدْ أَوْسَعَهَا ضَيْراً","غرر الحكم ودرر الكلم"]]
[["النُّصْحُ يُثْمِرُ الْمَحَبَّةَ","غرر الحكم ودرر الكلم"],["النَّصِيحَةُ تُثْمِرُ الْوُدَّ","غرر الحكم ودرر الكلم"],["النَّصِيحَةُ مِنْ أَخْلَاقِ الْكِرَامِ","غرر الحكم ودرر الكلم"],["الْمُؤْمِنُ غَرِيزَتُهُ النُّصْحُ وَسَجِيَّتُهُ الْكَظْمُ","غرر الحكم ودرر الكلم"],["قَدْ يَسْتَفِيدُ الظِّنَّةَ النَّاصِحُ","غرر الحكم ودرر الكلم"],["مِنْ أَحْسَنِ النَّصِيحَةِ الْإِبَانَةُ عَنِ الْقَبِيحَةِ","غرر الحكم ودرر الكلم"],["مِنْ أَحْسَنِ الدِّينِ النُّصْحُ","غرر الحكم ودرر الكلم"],["مِنْ أَفْضَلِ النُّصْحِ الْإِشَارَةُ بِالصُّلْحِ","غرر الحكم ودرر الكلم"],["لَا نُصْحَ كَالتَّحْذِيرِ","غرر الحكم ودرر الكلم"],["لَا إِخْلَاصَ كَالنُّصْحِ","غرر الحكم ودرر الكلم"],["لَا خَيْرَ فِي قَوْمٍ لَيْسُوا بِنَاصِحِينَ وَلَا يُحِبُّونَ النَّاصِحِينَ","غرر الحكم ودرر الكلم"]]
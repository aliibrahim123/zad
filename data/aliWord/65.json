[["الْعِلْمُ حِرْزٌ","غرر الحكم ودرر الكلم"],["الْعَقْلُ يُوجِبُ الْحَذَرَ","غرر الحكم ودرر الكلم"],["الْعِلْمُ [الْحِلْمُ‏] حِجَابٌ مِنَ الْآفَاتِ","غرر الحكم ودرر الكلم"],["الْعِلْمُ يُنْجِي مِنَ الِارْتِبَاكِ فِي الْحَيْرَةِ [بِالْحَيْرَةِ]","غرر الحكم ودرر الكلم"],["بِالْعِلْمِ يَسْتَقِيمُ الْمُعْوَجُّ","غرر الحكم ودرر الكلم"],["ثَمَرَةُ الْعِلْمِ مَعْرِفَةُ اللَّهِ","غرر الحكم ودرر الكلم"],["ثَمَرَةُ الْعِلْمِ الْعِبَادَةُ","غرر الحكم ودرر الكلم"],["ثَمَرَةُ الْعِلْمِ إِخْلَاصُ الْعَمَلِ","غرر الحكم ودرر الكلم"],["عَلَى قَدْرِ الرَّأْيِ تَكُونُ الْعَزِيمَةُ","غرر الحكم ودرر الكلم"],["كَيْفَ يَرْضَى بِالْقَضَاءِ مَنْ لَمْ يَصْدُقْ يَقِينُهُ","غرر الحكم ودرر الكلم"],["لَنْ تَسْكُنَ حُرْقَةُ الْحِرْمَانِ حَتَّى يَتَحَقَّقَ الْوِجْدَانُ","غرر الحكم ودرر الكلم"],["الْوِجْدَانُ سُلْوَانٌ","غرر الحكم ودرر الكلم"],["لِسَانُ الْعِلْمِ الصِّدْقُ","غرر الحكم ودرر الكلم"],["مَنْ أَيْقَنَ أَحْسَنَ","غرر الحكم ودرر الكلم"],["لَا تَكْمُلُ الْمُرُوءَةُ إِلَّا لِلَّبِيبِ","غرر الحكم ودرر الكلم"],["لَا نِيَّةَ لِمَنْ لَا عِلْمَ لَهُ","غرر الحكم ودرر الكلم"]]
[["الْحَرِيصُ لَا يَكْتَفِي","غرر الحكم ودرر الكلم"],["الْحَرِيصُ عَبْدُ الْمَطَامِعِ","غرر الحكم ودرر الكلم"],["الْحِرْصُ يُفْسِدُ الْإِيقَانَ","غرر الحكم ودرر الكلم"],["الْحِرْصُ يُزْرِي بِالْمُرُوَّةِ","غرر الحكم ودرر الكلم"],["الْحِرْصُ مُوقِعٌ فِي كَثِيرِ الْعُيُوبِ [كَبِيرِ الذُّنُوبِ‏]","غرر الحكم ودرر الكلم"],["أَجْمِلُوا فِي الطَّلَبِ فَكَمْ مِنْ حَرِيصٍ خَائِبٌ وَمُجْمِلٍ لَمْ يَخِبْ","غرر الحكم ودرر الكلم"],["كَمْ مِنْ حَرِيصٍ خَائِبٌ وَمُجْمِلٍ لَمْ يَخِبْ","غرر الحكم ودرر الكلم"],["طَاعَةُ الْحِرْصِ تُفْسِدُ الْيَقِينَ","غرر الحكم ودرر الكلم"],["مَنْ كَانَ حَرِيصاً لَمْ يَعْدَمِ الْإِهَانَةَ","غرر الحكم ودرر الكلم"],["مَنْ كَثُرَ حِرْصُهُ قَلَّ يَقِينُهُ","غرر الحكم ودرر الكلم"],["لَا حَيَاءَ لِحَرِيصٍ","غرر الحكم ودرر الكلم"],["لَا مُرُوَّةَ مَعَ شُحٍّ","غرر الحكم ودرر الكلم"],["لَا صِحَّةَ مَعَ نَهَمٍ","غرر الحكم ودرر الكلم"],["لَا تَجْتَمِعُ الصِّحَّةُ وَالنَّهَمُ","غرر الحكم ودرر الكلم"],["يَسِيرُ الْحِرْصِ يَحْمِلُ عَلَى كَثِيرِ الطَّمَعِ","غرر الحكم ودرر الكلم"]]
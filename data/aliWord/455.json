{
"title": "في الصبر ظفر",
"type": "text",
"data": [
{
"text": "الصَّبْرُ ظَفَرٌ الْعَجَلُ خَطَرٌ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الصَّبْرُ كَفِيلٌ بِالظَّفَرِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الصَّبْرُ عُنْوَانُ النَّصْرِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الصَّبْرُ عَلَى مَضَضِ الْغُصَصِ يُوجِبُ الظَّفَرَ بِالْفُرَصِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "اصْبِرْ تَظْفَرْ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "اصْبِرْ تَنَلْ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "بِالصَّبْرِ تُدْرَكُ مَعَالِي الْأُمُورِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "بَشِّرْ نَفْسَكَ إِذَا صَبَرْتَ بِالنُّجْحِ [بِالنَّجَاحِ‏] وَالظَّفَرِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "حُسْنُ الصَّبْرِ طَلِيعَةُ النَّصْرِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "دَوَامُ الصَّبْرِ عُنْوَانُ الظَّفَرِ وَالنَّصْرِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "فِي الصَّبْرِ ظَفَرٌ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "قَلَّ مَنْ صَبَرَ إِلَّا ظَفِرَ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "لَنْ يَعْدَمَ النَّصْرَ مَنِ اسْتَنْجَدَ الصَّبْرَ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "لَمْ يَعْدَمِ النَّصْرَ مَنِ انْتَصَرَ بِالصَّبْرِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "مَنْ يَصْبِرْ يَظْفَرْ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "مَنْ صَبَرَ فَنَفْسَهُ وَقَّرَ وَبِالثَّوَابِ ظَفِرَ وَلِلَّهِ سُبْحَانَهُ أَطَاعَ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "مَنِ اسْتَوْطَأَ مَرْكَبَ الصَّبْرِ ظَفِرَ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "مَرَارَةُ الصَّبْرِ تُثْمِرُ الظَّفَرَ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "مَرَارَةُ الصَّبْرِ تُذْهِبُهَا حَلَاوَةُ الظَّفَرِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "مِفْتَاحُ الظَّفَرِ لُزُومُ الصَّبْرِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "لَا ظَفَرَ لِمَنْ لَا صَبْرَ لَهُ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "لَا يَعْدَمُ الصَّبُورُ الظَّفَرَ وَإِنْ طَالَ بِهِ الزَّمَانُ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "يَئُولُ أَمْرُ الصَّبُورِ إِلَى دَرَكِ غَايَتِهِ وَبُلُوغِ أَمَلِهِ",
"source": "غرر الحكم ودرر الكلم"
}
]
}
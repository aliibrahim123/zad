{
"title": "باللّفظ المطلق وهو أربعون حكمة",
"type": "text",
"data": [
{
"text": "ضَياعُ الْعُمْرِ بَينَ الْامالِ وَ الْمُنى.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضَلَّ مَنِ اهْتَدى بِغَيرِ هُدى اللهِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضاعَ مَنْ كانَ لَهُ مَقْصَدٌ غَيرُ اللهِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضَرُورَةُ الْفَقْرِ تَبْعَثُ عَلى قَبيحِ الْأَمْرِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضَرُوراتُ الْأَحْوالِ تَحْمِلُ عَلى رُكُوبِ الْأَهْوالِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضالَّةُ الْحَكيم الْحِكمَةُ فَهُوَ أَحَقُّ بِها حَيْثُ كانَتْ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضياعُ الْعُقُولِ في طَلَبِ الْفُضُولِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضَلالُ الْعَقْلِ يُبْعِدُ عَنِ الرَّشادِ وَ يُفْسد الْمعادَ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضَرَرُ الْفَقْرِ أَحْمَدُ مِنْ أَشَرِ الْغِنى.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضَبْطُ اللِّسانِ مُلْكٌ وَ إِطْلاقُهُ هُلْكٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضابِطُ نَفْسِه عَنْ دَواعِي اللَّذّاتِ مالِكٌ وَ مُهْمِلُهَا هالِكٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضادُّوا الشَّرِّ بِالْخَيرِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضادُّوا الْغَباوَةَ بِالْفِطْنَةِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضادُّوا الْهَوى بِالْعَقْلِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضادُّوا الْكِبْرَ بِالْتَّواضُعِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضادُّوا الْجَوْرَ بِالْعَدْلِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضادُّوا الْغَضَبَ بِالْحِلْمِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضادُّوا الشَّهْوَةَ بِالْقَمْعِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضادُّوا الطَّمَعَ بِالْوَرَعِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضادُّوا الشَّرَهَ بِالْعِفَّةِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضادُّوا الْقَسْوَةَ بِالرِّقَّةِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضادُّوا الْجَهْلَ بِالْعِلْمِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضادُّوا الْجَزَعَ بِالْصَّبْرِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضادُّوا الْحِرْصَ بِالْقُنُوعِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضادُّوا الْكُفْرَ بِالْإِيْمانِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضادُّوا الْإِساءَ ةَ بِالْإِحْسانِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضادُّوا الْغَفْلَةَ بِالْيَقْظَةِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضادُّوا التَّواني بِالْعَزْمِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضادُّوا التَّفْريطَ بِالْحَزْمِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضَرُوراتُ الْأَحْوالِ تُذِلُّ رِقابَ الرِّجالِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضالَّةُ الْجاهِلِ غَيرُ مَوْجُودَةٍ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضِرامُ الشَّهْوَةِ يَبْعَثُ عَلى تَلَفِ الْمُهْجَةِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضَلالُ الدُّليلِ هَلاكُ الْمُسْتَدِلِّ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضَلَّةُ الرَّأْي تُفْسِدُ الْمَقاصِدَ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضُرُوبُ الْأَمْثالِ تُضْرَبُ لِاُولِي النُّهى وَ الْأَلْبابِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضَبْطُ النَّفْسِ عِنْدَ الرَّغَبِ وَ الرَّهَبِ مِنْ أَفْضَلِ الْأَدَبِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضِرامُ نارِ الْغَضَبِ يَبْعَثُ عَلى رُكُوبِ الْعَطَبِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضَلالُ النُّفوسِ بَيْنَ |دَواعي الشَّهْوَةِ وَ الْغَضَبِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضَبْطُ النَّفْسِ عِنْدَ هَيَجانِ الْغَضَبِ يُؤْمِنُ مَواقِعَ الْعَطبِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "ضَلالُ الْعَقْلِ أَشَدُّ ضَلَّةًٍ وَ ذِلَّةُ الْجَهْلِ أَعْظَمُ ذِلَّةًٍ.",
"source": "عيون الحكم والمواعظ"
}
]
}
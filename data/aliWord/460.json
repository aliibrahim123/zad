[["رَدُّ الْغَضَبِ بِالْحِلْمِ ثَمَرَةُ الْعِلْمِ","غرر الحكم ودرر الكلم"],["الْحِلْمُ ثَمَرَةُ الْعِلْمِ","غرر الحكم ودرر الكلم"],["تَجَرَّعْ مَضَضَ الْحِلْمِ فَإِنَّهُ رَأْسُ الْحِكْمَةِ وَثَمَرَةُ الْعِلْمِ","غرر الحكم ودرر الكلم"],["عَلَيْكَ بِالْحِلْمِ فَإِنَّهُ ثَمَرَةُ الْعِلْمِ","غرر الحكم ودرر الكلم"],["الْحِلْمُ زِينَةُ الْعِلْمِ","غرر الحكم ودرر الكلم"],["الْحِلْمُ حِلْيَةُ الْعِلْمِ وَعِلَّةُ [عُدَّةُ] السِّلْمِ","غرر الحكم ودرر الكلم"],["زَيْنُ الْعِلْمِ الْحِلْمُ","غرر الحكم ودرر الكلم"],["مُزَيِّنُ الرَّجُلِ عِلْمُهُ وَحِلْمُهُ","غرر الحكم ودرر الكلم"],["وَقَارُ الْحِلْمِ زِينَةُ الْعِلْمِ","غرر الحكم ودرر الكلم"],["حُسْنُ الْحِلْمِ دَلِيلُ وُفُورِ الْعِلْمِ","غرر الحكم ودرر الكلم"],["رَأْسُ الْعِلْمِ الْحِلْمُ","غرر الحكم ودرر الكلم"],["مَنِ ارْتَوَى مِنْ مَشْرَبِ الْعِلْمِ تَجَلْبَبَ جِلْبَابَ الْحِلْمِ","غرر الحكم ودرر الكلم"],["مِنْ أَشْرَفِ الْعِلْمِ التَّحَلِّي بِالْحِلْمِ","غرر الحكم ودرر الكلم"],["نِعْمَ وَزِيرُ الْعِلْمِ الْحِلْمُ","غرر الحكم ودرر الكلم"],["لَا عِلْمَ لِمَنْ لَا حِلْمَ لَهُ","غرر الحكم ودرر الكلم"]]
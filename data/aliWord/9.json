[["الْعِلْمُ قَائِدُ الْحِلْمِ","غرر الحكم ودرر الكلم"],["الْعِلْمُ مَرْكَبُ الْحِلْمِ","غرر الحكم ودرر الكلم"],["الْعِلْمُ قَائِدُ الْحِلْمِ","غرر الحكم ودرر الكلم"],["الْعِلْمُ أَصْلُ الْحِلْمِ","غرر الحكم ودرر الكلم"],["إِنَّ أَفْضَلَ الْعِلْمِ السَّكِينَةُ وَالْحِلْمُ","غرر الحكم ودرر الكلم"],["بِالْعِلْمِ تُدْرَكُ دَرَجَةُ الْحِلْمِ","غرر الحكم ودرر الكلم"],["تَعَلَّمُوا الْعِلْمَ وَتَعَلَّمُوا مَعَ الْعِلْمِ السَّكِينَةَ وَالْحِلْمَ فَإِنَّ الْعِلْمَ خَلِيلُ الْمُؤْمِنِ وَالْحِلْمَ وَزِيرُهُ","غرر الحكم ودرر الكلم"],["غَايَةُ الْعِلْمِ السَّكِينَةُ وَالْحِلْمُ","غرر الحكم ودرر الكلم"],["لَنْ يُثْمِرَ الْعِلْمُ حَتَّى يُقَارِنَهُ الْحِلْمُ","غرر الحكم ودرر الكلم"],["نِعْمَ قَرِينُ الْحِلْمِ الْعِلْمُ [الْعِلْمِ الْحِلْمُ‏]","غرر الحكم ودرر الكلم"],["وَقَارُ الْحِلْمِ زِينَةُ الْعِلْمِ","غرر الحكم ودرر الكلم"],["يَحْتَاجُ الْعِلْمُ إِلَى الْحِلْمِ","غرر الحكم ودرر الكلم"],["يَحْتَاجُ الْعِلْمُ إِلَى الْكَظْمِ","غرر الحكم ودرر الكلم"],["لَا شَيْ‏ءَ أَحْسَنُ مِنْ عَقْلٍ مَعَ عِلْمٍ وَعِلْمٍ مَعَ حِلْمٍ وَحِلْمٍ مَعَ قُدْرَةٍ","غرر الحكم ودرر الكلم"]]
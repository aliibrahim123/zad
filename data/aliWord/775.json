{
"title": "بلفظ سبب وهو تسع وثلاثون حكمة",
"type": "text",
"data": [
{
"text": "سَبَبُ الْوَرَعِ صِحَّةُ الدّينِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ الْحَيْرَةِ الشَّكُّ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ الْهَلاكِ الشِّرْكُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ فسادِ الدِّينِ الْهَوى.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ فَسادِ الْعَقْلُ حُبُّ الدُّنْيا.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ السِّيادَةِ السَّخاءُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ الشَّحْناءِ كَثْرَةُ الْمِراءِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ الْمَحَبَّةِ الْإِحْسانُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ زَوالِ النِّعَمِ الْكُفْرانُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ الْفَوْتِ الْمَوْتُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ صَلاحِ الدّينِ الْوَرَعُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ فَسادِ الْوَرَعِ الطَّمَعُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ صَلاحِ النَّفْسِ إِزالَةُ الطَّمَعِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ |صَلاحِ الْإِيمانِ التَّقْوى.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ فَسادِ الْعقْلِ الْهَوى.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ الْفِتَنِ حُبُّ الدُّنْيا.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ التَّدْميرِ سُوءُ التَّدْبيرِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ الْعَطبِ طاعَةُ الْغَضَبِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ تَزكِيَةِ الْأَخْلاقِ حُسْنُ الْأَدَبِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ الْكَمَدِ الْحَسَدُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ الْفِتَنِ الْحِقْدُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ الْهَياجِ اللَّجاجُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ الْفُرْقَةِ الْخِلافُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ الْقَناعَةِ الْعَفافُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ الْخَشْيَةِ الْعِلْمُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ الْوَقارِ الْحِلْمُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ الْفَضائِلِ الْعِلْمُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ الْمَحَبّةِ السَّخاءُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ الإئْتِلافِ الْوَفاءُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ الْعِفَّةِ الْحَياءُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ صَلاحِ النَّفْسِ الْعُزُوفُ عَنْ \"دارِ\" الدُّنْيا.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ الْفَقْرِ الْإِسْرافُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ الْفُجُورِ الْخَلْوَةُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ الشَّرَهِ غَلَبَةُ الشَّهْوَةِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ السَّلامَةِ الصَّمْتُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ الْإِخْلاصِ الْيَقينُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ الْمَزيدِ الشُّكْرُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ تَحَوُّلِ النِّعَمِ الْكُفْرُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "سَبَبُ الْمَحَبَّةِ الْبِشْرُ.",
"source": "عيون الحكم والمواعظ"
}
]

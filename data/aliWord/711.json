[["الْمِرَاءُ [المرء] بَذْرُ الشَّرِّ","غرر الحكم ودرر الكلم"],["مَنْ عَوَّدَ نَفْسَهُ الْمِرَاءَ صَارَ دَيْدَنَهُ","غرر الحكم ودرر الكلم"],["مَنْ جَعَلَ دَيْدَنَهُ الْمِرَاءَ لَمْ يُصْبِحْ لَيْلُهُ","غرر الحكم ودرر الكلم"],["مَنْ مَارَى السَّفِيهَ فَلَا عَقَلَ لَهُ","غرر الحكم ودرر الكلم"],["اللَّجَاجُ شُؤْمٌ","غرر الحكم ودرر الكلم"],["اللَّجَاجُ بَذْرُ الشَّرِّ","غرر الحكم ودرر الكلم"],["جِمَاعُ الشَّرِّ اللَّجَاجُ وَكَثْرَةُ الْمُمَارَاةِ","غرر الحكم ودرر الكلم"],["الْإِصْرَارُ سَجِيَّةُ الْهَلْكَى","غرر الحكم ودرر الكلم"],["اللَّجَاجُ أَكْثَرُ الْأَشْيَاءِ مَضَرَّةً فِي الْعَاجِلِ وَالْآجِلِ","غرر الحكم ودرر الكلم"],["خَيْرُ الْأَخْلَاقِ أَبْعَدُهَا عَنِ اللَّجَاجِ","غرر الحكم ودرر الكلم"],["لَا تُمَارِيَنَّ اللَّجُوجَ فِي مَحْفِلٍ","غرر الحكم ودرر الكلم"],["لَا مَرْكَبَ أَجْمَحُ مِنَ اللَّجَاجِ","غرر الحكم ودرر الكلم"],["بِئْسَ الشِّيمَةُ الْإِلْحَاحُ","غرر الحكم ودرر الكلم"],["ثَمَرَةُ الْمِرَاءِ الشَّحْنَاءُ","غرر الحكم ودرر الكلم"],["سَبَبُ الشَّحْنَاءِ كَثْرَةُ الْمِرَاءِ","غرر الحكم ودرر الكلم"],["مَنْ كَثُرَ مِرَاؤُهُ لَمْ يَأْمَنِ الْغَلَطَ","غرر الحكم ودرر الكلم"],["مَنْ كَثُرَ مِرَاؤُهُ بِالْبَاطِلِ دَامَ عَمَاؤُهُ عَنِ الْحَقِّ","غرر الحكم ودرر الكلم"],["اللَّجَاجُ يَشِينُ النَّفْسَ","غرر الحكم ودرر الكلم"],["اللَّجَاجُ يَنْبُو [يَكْبُو] بِرَاكِبِهِ","غرر الحكم ودرر الكلم"],["اللَّجَاجُ يَكْبُو بِرَاكِبِهِ [وَ يَنْبُو بِصَاحِبِهِ‏]","غرر الحكم ودرر الكلم"],["اللَّجَاجُ عُنْوَانُ الْعَطَبِ","غرر الحكم ودرر الكلم"],["ثَمَرَةُ اللَّجَاجِ الْعَطَبُ","غرر الحكم ودرر الكلم"],["اللَّجَاجُ يُعَقِّبُ الضُّرَّ","غرر الحكم ودرر الكلم"],["اللَّجَاجُ مَثَارُ الْحُرُوبِ","غرر الحكم ودرر الكلم"],["اللَّجَاجُ يُنْتِجُ الْحُرُوبَ وَيُوَغِّرُ الْقُلُوبَ","غرر الحكم ودرر الكلم"],["إِيَّاكَ وَمَذْمُومَ اللَّجَاجِ فَإِنَّهُ يُثِيرُ الْحُرُوبَ","غرر الحكم ودرر الكلم"],["سَبَبُ الْهِيَاجِ اللَّجَاجُ","غرر الحكم ودرر الكلم"],["رَاكِبُ اللَّجَاجِ مُتَعَرِّضٌ لِلْبَلَاءِ","غرر الحكم ودرر الكلم"],["اللَّجَاجَةُ تُورِثُ مَا لَيْسَ لِلْمَرْءِ [بِالْمَرْءِ] إِلَيْهِ حَاجَةٌ","غرر الحكم ودرر الكلم"],["قَدْ تُورِثُ اللَّجَاجَةُ مَا لَيْسَ لِلْمَرْءِ إِلَيْهِ حَاجَةٌ","غرر الحكم ودرر الكلم"],["لَيْسَ لِلَّجُوجِ تَدْبِيرٌ","غرر الحكم ودرر الكلم"],["مَنْ خَالَفَ النُّصْحَ [النَّصِيحَ‏] هَلَكَ","غرر الحكم ودرر الكلم"],["لَا رَأْيَ لِلَّجُوجِ","غرر الحكم ودرر الكلم"],["الْإِلْحَاحُ دَاعِيَةُ الْحِرْمَانِ","غرر الحكم ودرر الكلم"],["مَنْ كَثُرَ إِلْحَاحُهُ حُرِمَ","غرر الحكم ودرر الكلم"],["مَنْ أَلَحَّ مِنَ السُّؤَالِ أُبْرِمَ","غرر الحكم ودرر الكلم"],["مَنْ أَلَحَّ فِي السُّؤَالِ حُرِمَ","غرر الحكم ودرر الكلم"]]
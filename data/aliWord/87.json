[["الْمُرِيبُ أَبَداً عَلِيلٌ","غرر الحكم ودرر الكلم"],["الْبَرِي‏ءُ صَحِيحٌ وَالْمُرِيبُ عَلِيلٌ","غرر الحكم ودرر الكلم"],["الشَّكُّ يُطْفِئُ نُورَ الْقَلْبِ [الْقُلُوبِ‏]","غرر الحكم ودرر الكلم"],["إِذَا ظَهَرَتِ الرِّيبَةُ سَاءَتِ الظُّنُونُ","غرر الحكم ودرر الكلم"],["عَلَى الشَّكِّ وَقِلَّةِ الثِّقَةِ بِاللَّهِ مَبْنَى الْحِرْصِ وَالشُّحِّ","غرر الحكم ودرر الكلم"],["مَنْ يَتَرَدَّدْ يَزْدَدْ شَكّاً","غرر الحكم ودرر الكلم"],["لَا يُلْفَى [لَا يُلْقَى‏] الْمُرِيبُ صَحِيحاً","غرر الحكم ودرر الكلم"],["مَنْ عَمِيَ عَمَّا بَيْنَ يَدَيْهِ غَرَسَ الشَّكَّ بَيْنَ جَنْبَيْهِ","غرر الحكم ودرر الكلم"]]
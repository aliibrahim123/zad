"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ حَريصٍ فَقيرٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ راضٍ مُسْتَريحٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ بَري ءٍ صَحيحٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ مُحْسِنٍ مُسْتأْنَسٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ قانِطٍ آيِسٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ طالِبٍ مَطْلُوبٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ غالِبٍ فِي الشَّرِّ مَغْلُوبٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ أَرْباحِ الدُّنْيا خُسْرانٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ مَعْرُوفٍ إِحْسانٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ مَعْدُودٍ مُتَنَقِّصٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ سُرُورٍ مُتَنَغِّصٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ ماضٍ فَكَأَنْ لَمْ يَكُنْ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ آتٍ فَكأَن قَدْ كانَ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ عاقِلٍ مَغْمُومٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ عارِفٍ مَهْمُومٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ عالمٍ خائِفٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ عارِفٍ عائِفٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ مَخْلُوقٍ يَجْري إِلى ما لا يَدْري.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ عِلمٍ لا يُؤَيِّدُهُ عَقْلٌ مَضَلَّةٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ عِزٍ لا يُؤَيِّدُهُ دينٌ مَذَلَّةٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ إِنْسانٍ مُؤاخَذٌ بِجِنايَةِ لِسانِه وَ يَدِه.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ امْرِى ءٍ لاقٍ حِمامَهُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ مُمْتَنِعٍ صَعْبٌ مَرامُهُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ نَعيمٍ غَيْرَ الْجنَّةِ مَحْقُورٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ نَعيمِ الدُّنْيا ثُبُورٍ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ شَيْ ءٍ يَميلُ إِلى جِنْسِه.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ شَيْ ءٍ يَنْفِرُ مِنْ ضِدِّه.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ امْرِى ءٍ يَميلُ إِلى مِثْلِه.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ طَيْرٍ يَأْوي إِلى شَكْلِه.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ عافِيَةٍ إِلى بَلاءٍ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ شَقاءٍ إِلى رَخاءٍ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ جَمْعٍ إِلى شَتاتٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ مُتَوَقَّعٍ آتٍ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ مُنافِقٍ مُريبٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ آتٍ قَريبٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ باطِنٍ عِنْدَ اللهِ ظاهِرٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ سِرٍّ عِنْدَ اللهِ عَلانِيَةٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ شَيْ ءٍ خاشِعٌ لِلّهِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ شَيْ ءٍ يُمِلُّ ما خَلا طَرائِفَ الْحِكَمِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ مُؤُنِ الدُّنْيا خَفيفَةٌ عَلى الْقانِعِ وَ الْعَفيفِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ مُقْتَصَرٍ عَلَيْهِ كافٍ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ ما زادَ عَلى الْإِقْتِصادِ إِسْرافٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ يَوْمٍ يُفْيدُكَ عِبَراً إِنْ أَصْحَبْتَهُ فِكْراً.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ مَوَدَّةٍ مَبْنِيَّةٍ عَلى غَيْرِ ذاتِ اللهِ ضَلالٌ وَ الْإِعْتِمادُ عَلَيْها مُحالٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ أَحْوالِ الدُّنْيا زِلْزالٌ وَ مُلْكُها سَلْبٌ وَ انْتِقالٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ وِعاءٍ يَضيقُ بِما جُمِعَ فيهِ إِلَّا وِعاء الْعِلْمِ فَإِنَّهُ يَتَّسِعُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ حَسَنَةٍ لا يُرادُ بِها وَجْهُ اللهِ سُبْحانَهُ فَعَلَيْها قُبْحُ الرِّياءِ وَ ثَمَرَتُها سُوءُ الْجَزاءِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ مُدَّةٍ فِي الدُّنْيا إِلى انْتِهاءٍ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ حَيٍّ فِي الدُّنْيا إِلى |مَماةٍ وَ| فَناءٍ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ امْرِى ءٍ يَلْقى ما عَمِلَ وَ يُجْزى بِما صَنَعَ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ بَلاءٍ دُونَ النّارِ عافِيَةٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ مُؤجِّلٍ يَتَعَلَّلُ بِالتَّسْويفِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ مُعاجِلٍ يَنالُ الْإِنْتِظارَ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ يسارِ الدُّنْيا إِعسارٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ شَيْ ءٍ يَحْتاجُ إِلى الْعَقْلِ وَالْعَقْلُ يَحْتاجُ إِلى الْأَدَبِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ حَسَبٍ مُتَناهٍ إِلَّا الْعَقْلَ وَ الْأَدَبَ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ شَيْ ءٍ مِنَ الْاخِرَةِ عِيانُهُ أَعْظَمُ مِنْ سَماعِهِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ امْرِى ءٍ طالِبُ أُمْنِيَّتِه وَ مَطْلُوبُ مَنِيَّتِه.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ شَيْ ءٍ يَعِزُّ حينَ يَنْزُرُ إِلَّا الْعِلمَ فَإِنَّهُ يَعِزُّ حينَ يَغْزُرُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ نِعْمَةٍ أُنيلُ مِنْها الْمَعْرُوفُ فَإِنَّها مَأْمُونُ السَّلْبِ مُحَصَّنَةٌ مِنَ الْغِيَرِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ شَرِهٍ مُعَنّا.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ مُسْتَسْلِمٍ مُوقَّى.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ مُعْتَمِدٍ عَلى نَفْسِه مُلْقَى.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ مُطيعٍ مُكْرَمٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ عاصٍ آثِمٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ جاهِلٍ مَفْتُونٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ عاقِلٍ مَحْزُونٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ قَريبٍ دانٍ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ ذي رُتْبَةٍ |سَنِيَّةٍ| مَحْسُودٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ يَوْمٍ يَسُوقَ إِلى غَد|هِ|.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ فقرٍ يُسَدُّ إِلَّا فَقْرَ الْحُمْقِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ شَيْ ءٍ ما خَلا الْيَقينَ ظَنٌّ وَ شُكُوكٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ شَيْ ءٍ يَنْقُصُ عَلى النَّفَقَةِ إِلَّا الْعِلمَ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ قادِرٍ غَيرَ اللهِ مَقْدُورٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ أَمْرٍ لا يَحْسُنُ أَنْ يُنْشَرَ فَالْأَحْسَنُ بِهِ أَنْ يُكْتَمَ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ شَيْ ءٍ لا يَحْسُنُ نَشْرُهُ أَمانَةٌ وَ إِنْ لَمْ يُسْتَكْتَمْ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ شَيْ ءٍ يُسْتَطاعُ إِلَّا نَقْلُ الطِّباعِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "كُلُّ شَيْ ءٍ مِنَ الدُّنْيا سَماعُهُ أَعْظَمُ مِنْ عَيانِه.",
"source": "عيون الحكم والمواعظ"
}
]

[["الظَّالِمُ مَلُومٌ","غرر الحكم ودرر الكلم"],["الظُّلْمُ وَخِيمُ الْعَاقِبَةِ","غرر الحكم ودرر الكلم"],["شَيْئَانِ لَا تَسْلَمُ عَاقِبَتُهُمَا الظُّلْمُ وَالشَّرُّ","غرر الحكم ودرر الكلم"],["الْبَغْيُ يُزِيلُ [يضل‏] النِّعَمَ","غرر الحكم ودرر الكلم"],["الظُّلْمُ تَبِعَاتٌ مُوبِقَاتٌ","غرر الحكم ودرر الكلم"],["الظُّلْمُ يُرْدِي صَاحِبَهُ","غرر الحكم ودرر الكلم"],["الْمُتَعَدِّي كَثِيرُ الْأَضْدَادِ وَالْأَعْدَاءِ","غرر الحكم ودرر الكلم"],["إِيَّاكَ وَالظُّلْمَ فَمَنْ ظَلَمَ كُرِهَتْ أَيَّامُهُ","غرر الحكم ودرر الكلم"],["مَنْ رَكِبَ مَحَجَّةَ الظُّلْمِ كُرِهَتْ أَيَّامُهُ","غرر الحكم ودرر الكلم"],["إِذَا ظَهَرَتِ الْجِنَايَاتُ ارْتَفَعَتِ الْبَرَكَاتُ","غرر الحكم ودرر الكلم"],["فِي الْجَوْرِ الطُّغْيَانُ","غرر الحكم ودرر الكلم"],["مَنْ ظَلَمَ أَفْسَدَ أَمْرَهُ","غرر الحكم ودرر الكلم"],["مَنْ جَارَ قَصَمَ عُمُرَهُ","غرر الحكم ودرر الكلم"],["مَنْ ظَلَمَ قَصَمَ عُمُرَهُ","غرر الحكم ودرر الكلم"],["مَنْ جَارَتْ أَقْضِيَتُهُ [قَضِيَّتُهُ‏] زَالَتْ قُدْرَتُهُ","غرر الحكم ودرر الكلم"],["مَنْ كَثُرَ تَعَدِّيهِ كَثُرَتْ أَعَادِيهِ","غرر الحكم ودرر الكلم"],["مَنْ كَثُرَ ظُلْمُهُ كَثُرَتْ نَدَامَتُهُ","غرر الحكم ودرر الكلم"],["مَنْ عَامَلَ بِالْعُنْفِ نَدِمَ","غرر الحكم ودرر الكلم"]]
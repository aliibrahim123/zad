[["الدِّينُ يَعْصِمُ","غرر الحكم ودرر الكلم"],["صِيَانَةُ الْمَرْءِ عَلَى قَدْرِ دِيَانَتِهِ","غرر الحكم ودرر الكلم"],["مَنْ دَانَ تَحَصَّنَ","غرر الحكم ودرر الكلم"],["لَا يُسْلِمُ الدِّينُ مَنْ تَحَصَّنَ بِهِ","غرر الحكم ودرر الكلم"],["الدِّينُ يَصُدُّ [يَصْدُرُ] عَنِ الْمَحَارِمِ","غرر الحكم ودرر الكلم"],["خَيْرُ أُمُورِ [أَعْوَانِ‏] الدِّينِ الْوَرَعُ","غرر الحكم ودرر الكلم"],["سَبَبُ الْوَرَعِ صِحَّةُ الدِّينِ","غرر الحكم ودرر الكلم"],["وَرَعُ الرَّجُلِ عَلَى قَدْرِ دِينِهِ","غرر الحكم ودرر الكلم"]]
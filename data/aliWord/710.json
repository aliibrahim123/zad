{
"title": "الفصل السادس الفجور ذمها و بعض آثارها",
"type": "text",
"data": [
{
"text": "الْفَاجِرُ مُجَاهِرٌ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الْمُعْلِنُ بِالْمَعْصِيَةِ مُجَاهِرٌ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الْإِصْرَارُ شِيمَةُ الْفُجَّارِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الْفُجُورُ مِنْ شِيَمِ الْكُفَّارِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "إِيَّاكَ وَالْمُجَاهَرَةَ بِالْفُجُورِ فَإِنَّهَا مِنْ أَشَدِّ الْمَآثِمِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "إِنَّ الْفُجَّارَ كُلُّ ظَلُومٍ خَتُورٍ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "ثَلَاثٌ هُنَّ شَيْنُ الدِّينِ الْفُجُورُ وَالْغَدْرُ وَالْخِيَانَةُ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "سَبَبُ الْفُجُورِ الْخَلْوَةُ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "شَرُّ النَّاسِ مَنْ لَا يُبَالِي أَنْ يَرَاهُ النَّاسُ مُسِيئاً",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "صَارَ الْفُسُوقُ فِي الدُّنْيَا نَسَباً وَالْعَفَافُ عَجَباً وَلَبِسَ الْإِسْلَامُ لُبْسَ الْفَرْوِ مَقْلُوباً",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "فِرُّوا كُلَّ الْفِرَارِ مِنَ الْفَاجِرِ الْفَاسِقِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "لَا يَنْتَصِفُ الْبَرُّ مِنَ الْفَاجِرِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "لَا وِزْرَ أَعْظَمُ مِنَ التَّبَجُّحِ بِالْفُجُورِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "يَنْبَغِي لِمَنْ عَرَفَ الْفُجَّارَ أَنْ لَا يَعْمَلَ عَمَلَهُمْ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الْفَجُورُ لَا تَقِيَّةَ لَهُ [نَقِيَّةَ لَهُ‏]",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "التَّقْوَى تُعِزُّ الْفُجُورُ يُذِلُّ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "إِيَّاكَ وَمَحَاضِرَ الْفُسُوقِ فَإِنَّهَا مُسْخِطَةٌ لِلرَّحْمَنِ مُصْلِيَةٌ لِلنِّيرَانِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "أَسْرَعُ شَيْ‏ءٍ عُقُوبَةً الْيَمِينُ الْفَاجِرَةُ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الْفُجُورُ دَارُ حِصْنٍ ذَلِيلٍ لَا يَمْنَعُ أَهْلَهُ وَلَا يُحْرِزُ مَنْ لَجَأَ إِلَيْهِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "لَيْسَ مَعَ الْفُجُورِ غَنَاءٌ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "لَيْسَ لِكَذُوبٍ أَمَانَةٌ وَلَا لِفَجُورٍ صِيَانَةٌ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الْفَاسِقُ لَا غِيبَةَ لَهُ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الْفَشَلُ [القشل‏] مَنْقَصَةٌ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "التَّوَانِي سَجِيَّةُ النَّوْكَى",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "إِيثَارُ الدَّعَةِ يَقْطَعُ أَسْبَابَ الْمَنْفَعَةِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "آفَةُ الْعَمَلِ الْبَطَالَةُ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "آفَةُ النُّجْحِ الْكَسَلُ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "ثَلَاثٌ يَهْدُدْنَ الْقَوِيَّ فَقْدُ الْأَحِبَّةِ وَالْفَقْرُ فِي الْغُرْبَةِ وَدَوَامُ الشِّدَّةِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "رُبَّ قَاعِدٍ عَمَّا يَسُرُّهُ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "كُنْ مِمَّنْ [مِمَّا] لَا يُفْرِطُ بِهِ عُنْفٌ وَلَا يَقْعُدُ بِهِ ضَعْفٌ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "مِنَ التَّوَانِي يَتَوَلَّدُ الْكَسَلُ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "لَا تَتَّكِلْ فِي أُمُورِكَ عَلَى كَسْلَانَ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "التَّوَانِي فَوْتٌ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الْمَطَلُ عَذَابُ النَّفْسِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "بِالتَّوَانِي يَكُونُ الْفَوْتُ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "التَّوَانِي فِي الدُّنْيَا إِضَاعَةٌ وَفِي الْآخِرَةِ حَسْرَةٌ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "مَنْ دَامَ كَسَلُهُ خَابَ أَمَلُهُ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "مَنْ ضَعُفَ جِدُّهُ قَوِيَ ضِدُّهُ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "مَنْ أَطَاعَ التَّوَانِيَ ضَيَّعَ الْحُقُوقَ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "مَنْ قَعَدَ عَنْ حِيلَتِهِ [جِبِلَّتِهِ‏] أَقَامَتْهُ الشَّدَائِدُ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "مَنْ أَطَاعَ التَّوَانِيَ أَحَاطَتْ بِهِ النَّدَامَةُ",
"source": "غرر الحكم ودرر الكلم"
}
]
}
[["الْجُودُ رِيَاسَةٌ الْمُلْكُ سِيَاسَةٌ","غرر الحكم ودرر الكلم"],["الرِّيَاسَةُ عَطَبٌ","غرر الحكم ودرر الكلم"],["الِاحْتِمَالُ زَيْنُ السِّيَاسَةِ","غرر الحكم ودرر الكلم"],["حُسْنُ السِّيَاسَةِ قَوَامُ الرَّعِيَّةِ","غرر الحكم ودرر الكلم"],["حُسْنُ السِّيَاسَةِ يَسْتَدِيمُ الرِّيَاسَةَ","غرر الحكم ودرر الكلم"],["حُسْنُ التَّدْبِيرِ وَتَجَنُّبُ التَّبْذِيرِ مِنْ حُسْنِ السِّيَاسَةِ","غرر الحكم ودرر الكلم"],["فَضِيلَةُ الرِّيَاسَةِ حُسْنُ السِّيَاسَةِ","غرر الحكم ودرر الكلم"],["مَنْ حَسُنَتْ سِيَاسَتُهُ وَجَبَتْ طَاعَتُهُ","غرر الحكم ودرر الكلم"],["مَنْ حَسُنَتْ سِيَاسَتُهُ دَامَتْ رِيَاسَتُهُ","غرر الحكم ودرر الكلم"],["مَنْ سَاسَ نَفْسَهُ أَدْرَكَ السِّيَاسَةَ","غرر الحكم ودرر الكلم"],["مَنْ بَذَلَ مَعْرُوفَهُ اسْتَحَقَّ الرِّيَاسَةَ","غرر الحكم ودرر الكلم"],["مَنْ سَمَا إِلَى الرِّئَاسَةِ صَبَرَ عَلَى مَضَضِ السِّيَاسَةِ","غرر الحكم ودرر الكلم"],["مَنْ قَصُرَ عَنِ السِّيَاسَةِ صَغُرَ عَنِ الرِّيَاسَةِ","غرر الحكم ودرر الكلم"],["مَنِ اتَّخَذَ الْحَقَّ لِجَاماً اتَّخَذَهُ النَّاسُ إِمَاماً","غرر الحكم ودرر الكلم"],["مِلَاكُ السِّيَاسَةِ الْعَدْلُ","غرر الحكم ودرر الكلم"],["لَا رِيَاسَةَ كَالْعَدْلِ فِي السِّيَاسَةِ","غرر الحكم ودرر الكلم"],["نِعْمَ السِّيَاسَةُ الرِّفْقُ","غرر الحكم ودرر الكلم"],["أَصْعَبُ السِّيَاسَاتِ نَقْلُ الْعَادَاتِ","غرر الحكم ودرر الكلم"]]
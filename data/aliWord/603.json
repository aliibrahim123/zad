[["بِالْإِفْضَالِ تُسْتَرَقُّ الْأَعْنَاقُ","غرر الحكم ودرر الكلم"],["مَنْ تَفَضَّلَ خُدِمَ","غرر الحكم ودرر الكلم"],["مَنْ بَذَلَ مَالَهُ اسْتَعْبَدَ","غرر الحكم ودرر الكلم"],["مَنْ بَذَلَ مَالَهُ اسْتَرَقَّ الرِّقَابَ","غرر الحكم ودرر الكلم"],["مَنْ سَمَحَتْ نَفْسُهُ بِالْعَطَاءِ اسْتَعْبَدَ أَبْنَاءَ الدُّنْيَا","غرر الحكم ودرر الكلم"]]
[["الْقِنْيَةُ أَحْزَانٌ","غرر الحكم ودرر الكلم"],["الْقِنْيَةُ تَجْلِبُ الْحَزَنَ","غرر الحكم ودرر الكلم"],["الْقِنْيَةُ يَنْبُوعُ الْأَحْزَانِ [الْإِحْسَانِ‏]","غرر الحكم ودرر الكلم"],["ثَمَرَةُ الْمُقْتَنِيَاتِ الْحُزْنُ","غرر الحكم ودرر الكلم"],["بِقَدْرِ الْقِنْيَةِ [الْفِتْنَةِ] يَتَضَاعَفُ الْحُزْنُ وَالْغُمُومُ","غرر الحكم ودرر الكلم"],["عَلَى قَدْرِ الْقِنْيَةِ [الْفِتْنَةِ] تَكُونُ الْغُمُومُ","غرر الحكم ودرر الكلم"],["الْمَالُ لِلْفِتَنِ سَبَبٌ وَلِلْحَوَادِثِ سَلَبٌ","غرر الحكم ودرر الكلم"],["الْمَالُ دَاعِيَةُ التَّعَبِ وَمَطِيَّةُ النَّصَبِ","غرر الحكم ودرر الكلم"],["دِرْهَمٌ يَنْفَعُ خَيْرٌ مِنْ دِينَارٍ يَصْرَعُ","غرر الحكم ودرر الكلم"],["رُبَّ مَغْبُوطٍ بِرَجَاءٍ هُوَ دَاؤُهُ","غرر الحكم ودرر الكلم"],["رُبَّ مُنْعَمٍ عَلَيْهِ مُسْتَدْرَجٌ بِالنُّعْمَى","غرر الحكم ودرر الكلم"],["رُكُوبُ الْأَهْوَالِ يَكْسِبُ الْأَمْوَالَ","غرر الحكم ودرر الكلم"],["صَاحِبُ الْمَالِ مَتْعُوبٌ وَالْغَالِبُ بِالشَّرِّ مَغْلُوبٌ","غرر الحكم ودرر الكلم"],["عَلَى قَدْرِ النَّعْمَاءِ يَكُونُ مَضَضُ الْبَلَاءِ","غرر الحكم ودرر الكلم"],["مَنْ رَكِبَ الْأَهْوَالَ اكْتَسَبَ الْأَمْوَالَ","غرر الحكم ودرر الكلم"],["لَا تَأْمَنْ مِنَ الْبَلَاءِ فِي أَمْنِكَ وَرَخَائِكَ","غرر الحكم ودرر الكلم"],["كَمْ مِنْ مُبْتَلًى بِالنَّعْمَاءِ","غرر الحكم ودرر الكلم"]]
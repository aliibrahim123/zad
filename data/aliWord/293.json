[["الِاسْتِغْفَارُ يَمْحُو الْأَوْزَارَ","غرر الحكم ودرر الكلم"],["الِاسْتِغْفَارُ دَوَاءُ الذُّنُوبِ","غرر الحكم ودرر الكلم"],["الْمُؤْمِنُ مُنِيبٌ مُسْتَغْفِرٌ تَوَّابٌ","غرر الحكم ودرر الكلم"],["الِاسْتِغْفَارُ أَعْظَمُ جَزَاءً [أَجْراً] وَأَسْرَعُ مَثُوبَةً","غرر الحكم ودرر الكلم"],["اسْتَغْفِرْ تُرْزَقْ","غرر الحكم ودرر الكلم"],["أَفْضَلُ التَّوَسُّلِ الِاسْتِغْفَارُ","غرر الحكم ودرر الكلم"],["إِنَّ الْعَبْدَ بَيْنَ نِعْمَةٍ وَذَنْبٍ لَا يُصْلِحُهُمَا إِلَّا الِاسْتِغْفَارُ وَالشُّكْرُ","غرر الحكم ودرر الكلم"],["حُسْنُ الِاسْتِغْفَارِ يُمَحِّصُ الذُّنُوبَ","غرر الحكم ودرر الكلم"],["سِلَاحُ الْمُذْنِبِ الِاسْتِغْفَارُ","غرر الحكم ودرر الكلم"],["عَجِبْتُ لِمَنْ يَقْنَطُ وَمَعَهُ النَّجَاةُ وَهُوَ الِاسْتِغْفَارُ","غرر الحكم ودرر الكلم"],["مَنْ أُعْطِيَ الِاسْتِغْفَارَ لَمْ يُحْرَمِ الْمَغْفِرَةَ","غرر الحكم ودرر الكلم"],["مَنِ اسْتَغْفَرَ اللَّهَ أَصَابَ الْمَغْفِرَةَ","غرر الحكم ودرر الكلم"],["نِعْمَ الْوَسِيلَةُ الِاسْتِغْفَارُ","غرر الحكم ودرر الكلم"],["لَا شَفِيعَ أَنْجَحُ مِنَ الِاسْتِغْفَارِ","غرر الحكم ودرر الكلم"]]
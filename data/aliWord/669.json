{
"title": "البشر و فوائده",
"type": "text",
"data": [
{
"text": "الْكَرِيمُ أَبْلَجُ اللَّئِيمُ مُلَهْوَجٌ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الْبِشْرُ مَبَرَّةٌ الْعَبُوسُ مَعَرَّةٌ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الْبِشْرُ أَوَّلُ الْبِرّ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الطَّلَاقَةُ شِيمَةُ الْحُرِّ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الْبِشْرُ شِيمَةُ الْحُرِّ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الْبِشْرُ أَوَّلُ النَّائِلِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الْبِشْرُ يُطْفِي نَارَ الْمُعَانَدَةِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الْبِشْرُ أَوَّلُ النَّوَالِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الْبِشْرُ يُونِسُ الرِّفَاقَ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الْبَشَاشَةُ حِبَالَةُ الْمَوَدَّةِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الْبِشْرُ إِسْدَاءُ [ابْتِدَاءُ] الصَّنِيعَةِ بِغَيْرِ مَئُونَةٍ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الْبِشْرُ أَحَدُ الْعَطَاءَيْنِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الْبَشَاشَةُ أَحَدُ الْقَرَاءَيْنِ [الْقَرَابَتَيْنِ‏]",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الْبِشْرُ مَنْظَرٌ مُونِقٌ وَخُلُقٌ مُشْرِقٌ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "بِالْبِشْرِ وَبَسْطِ الْوَجْهِ يَحْسُنُ مَوْقِعُ الْبَذْلِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "بِشْرُكَ يَدُلُّ عَلَى كَرَمِ نَفْسِكَ وَتَوَاضُعُكَ يُنْبِئُ عَنْ شَرِيفِ خُلُقِكَ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "حُسْنُ الْبِشْرِ أَحَدُ الْبِشَارَتَيْنِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "حُسْنُ الْبِشْرِ شِيمَةُ كُلِّ حُرٍّ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "حُسْنُ الْبِشْرِ مِنْ عَلَائِمِ النَّجَاحِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "سَبَبُ الْمَحَبَّةِ الْبِشْرُ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "طَلَاقَةُ الْوَجْهِ بِالْبِشْرِ وَالْعَطِيَّةِ وَفِعْلِ الْبِرِّ وَبَذْلُ التَّحِيَّةِ دَاعٍ إِلَى مَحَبَّةِ الْبَرِيَّةِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "عَلَيْكَ بِالْبَشَاشَةِ فَإِنَّهَا حِبَالَةُ الْمَوَدَّةِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "كَثْرَةُ الْبِشْرِ آيَةُ الْبَذْلِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "مَنْ بَخِلَ عَلَيْكَ بِبِشْرِهِ لَمْ يَسْمَحْ بِبِرِّهِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "وَجْهٌ مُسْتَبْشِرٌ خَيْرٌ مِنْ قَطُوبٍ مُؤْثِرٍ",
"source": "غرر الحكم ودرر الكلم"
}
]
}
[["التَّوَاضُعُ يَرْفَعُ التَّكَبُّرُ يَضَعُ","غرر الحكم ودرر الكلم"],["التَّوَاضُعُ يَرْفَعُ الْوَضِيعَ","غرر الحكم ودرر الكلم"],["اتَّضِعْ تَرْتَفِعْ","غرر الحكم ودرر الكلم"],["أَعْظَمُ النَّاسِ رِفْعَةً مَنْ وَضَعَ نَفْسَهُ","غرر الحكم ودرر الكلم"],["إِنَّكَ إِنْ تَوَاضَعْتَ رَفَعَكَ اللَّهُ","غرر الحكم ودرر الكلم"],["بِالتَّوَاضُعِ تَكُونُ الرِّفْعَةُ","غرر الحكم ودرر الكلم"],["بِالتَّوَاضُعِ تُزَانُ الرِّفْعَةُ","غرر الحكم ودرر الكلم"],["تَوَاضَعْ لِلَّهِ يَرْفَعْكَ","غرر الحكم ودرر الكلم"],["تَوَاضُعُ الْمَرْءِ يَرْفَعُهُ","غرر الحكم ودرر الكلم"],["تَوَاضُعُ الشَّرِيفِ يَدْعُو إِلَى كَرَامَتِهِ","غرر الحكم ودرر الكلم"],["كَفَى بِالتَّوَاضُعِ رِفْعَةً ","غرر الحكم ودرر الكلم"],["كَمَا تَتَوَاضَعُ تَعْظُمُ","غرر الحكم ودرر الكلم"],["مَنْ تَوَاضَعَ رُفِعَ [مَنْ تَرَفَّعَ وُضِعَ‏]","غرر الحكم ودرر الكلم"],["مَنْ حَقَّرَ نَفْسَهُ عَظُمَ","غرر الحكم ودرر الكلم"],["مَنْ تَوَاضَعَ عَظَّمَهُ اللَّهُ وَرَفَعَهُ","غرر الحكم ودرر الكلم"],["مَنْ لَمْ يَتَّضِعْ عِنْدَ نَفْسِهِ لَمْ يَرْتَفِعْ عِنْدَ غَيْرِهِ","غرر الحكم ودرر الكلم"],["مَا اكْتُسِبَ الشَّرَفُ بِمِثْلِ التَّوَاضُعِ","غرر الحكم ودرر الكلم"],["مَا تَوَاضَعَ أَحَدٌ إِلَّا زَادَهُ اللَّهُ تَعَالَى جَلَالَةً","غرر الحكم ودرر الكلم"],["نَزِّلْ نَفْسَكَ دُونَ مَنْزِلَتِهَا تُنَزِّلْكَ النَّاسُ فَوْقَ مَنْزِلَتِكَ","غرر الحكم ودرر الكلم"],["وَتَوَاضَعْ لِلَّهِ الَّذِي رَفَعَكَ","غرر الحكم ودرر الكلم"],["بِكَثْرَةِ التَّوَاضُعِ يَتَكَامَلُ الشَّرَفُ","غرر الحكم ودرر الكلم"],["ثَمَرَةُ التَّوَاضُعِ الْمَحَبَّةُ","غرر الحكم ودرر الكلم"],["بِخَفْضِ الْجَنَاحِ تَنْتَظِمُ الْأُمُورُ","غرر الحكم ودرر الكلم"],["ثَلَاثَةٌ يُوجِبْنَ الْمَحَبَّةَ الدِّينُ وَالتَّوَاضُعُ وَالسَّخَاءُ","غرر الحكم ودرر الكلم"],["حَاصِلُ التَّوَاضُعِ الشَّرَفُ","غرر الحكم ودرر الكلم"]]
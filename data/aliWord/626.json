[["الْإِنْصَافُ رَاحَةٌ الشَّرُّ وَقَاحَةٌ","غرر الحكم ودرر الكلم"],["الْإِنْصَافُ يَسْتَدِيمُ الْمَحَبَّةَ","غرر الحكم ودرر الكلم"],["الْإِنْصَافُ يَأْلِفُ [يَتَأَلَّفُ‏] الْقُلُوبَ","غرر الحكم ودرر الكلم"],["الْإِنْصَافُ يَرْفَعُ الْخِلَافَ وَيُوجِبُ الِائْتِلَافَ","غرر الحكم ودرر الكلم"],["أَنْصِفْ مِنْ نَفْسِكَ قَبْلَ أَنْ يُنْتَصَفَ مِنْكَ فَإِنَّ ذَلِكَ أَجَلُّ لِقَدْرِكَ وَأَجْدَرُ بِرِضَا رَبِّكَ","غرر الحكم ودرر الكلم"],["بِالنَّصَفَةِ تَدُومُ الْوُصْلَةُ","غرر الحكم ودرر الكلم"],["عَلَى الْإِنْصَافِ تَرْسُخُ الْمَوَدَّةُ","غرر الحكم ودرر الكلم"],["مَنْ أَنْصَفَ أُنْصِفَ","غرر الحكم ودرر الكلم"],["مَنْ عَدِمَ إِنْصَافَهُ لَمْ يُصْحَبْ","غرر الحكم ودرر الكلم"],["مَنْ مَنَعَ الْإِنْصَافَ سَلَبَهُ اللَّهُ الْإِمْكَانَ","غرر الحكم ودرر الكلم"],["مَنْ كَثُرَ إِنْصَافُهُ تَشَاهَدَتِ النُّفُوسُ بِتَعْدِيلِهِ","غرر الحكم ودرر الكلم"],["مَعَ الْإِنْصَافِ تَدُومُ الْأُخُوَّةُ","غرر الحكم ودرر الكلم"]]
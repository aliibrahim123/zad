[["الْمَكْرُ لُؤْمٌ الْخَدِيعَةُ شُؤْمٌ","غرر الحكم ودرر الكلم"],["الْمَكُورُ شَيْطَانٌ","غرر الحكم ودرر الكلم"],["الْمَكْرُ شِيمَةُ الْمَرَدَةِ","غرر الحكم ودرر الكلم"],["الْمَكْرُ سَجِيَّةُ اللِّئَامِ","غرر الحكم ودرر الكلم"],["الْمَكْرُ بِمَنِ ائْتَمَنَكَ كُفْرٌ","غرر الحكم ودرر الكلم"],["الْمَكُورُ شَيْطَانٌ فِي صُورَةِ إِنْسَانٍ","غرر الحكم ودرر الكلم"],["الْحُرِّيَّةُ مُنَزَّهَةٌ مِنَ الْغِلِّ وَالْمَكْرِ","غرر الحكم ودرر الكلم"],["الْمَكْرُ وَالْغُلُّ مُجَانِبَا الْإِيمَانِ","غرر الحكم ودرر الكلم"],["إِيَّاكَ وَالْمَكْرَ فَإِنَّ الْمَكْرَ لَخُلُقٌ ذَمِيمٌ","غرر الحكم ودرر الكلم"],["رُبِّ مُحْتَالٍ صَرَعَتْهُ حِيلَتُهُ","غرر الحكم ودرر الكلم"],["مَنْ مَكَرَ حَاقَ بِهِ مَكْرُهُ","غرر الحكم ودرر الكلم"],["مَنْ مَكَرَ بِالنَّاسِ رَدَّ اللَّهُ سُبْحَانَهُ مَكْرَهُ فِي عُنُقِهِ","غرر الحكم ودرر الكلم"],["مَنْ لَمْ يَتَحَرَّزْ مِنَ الْمَكَايِدِ قَبْلَ وُقُوعِهَا لَمْ يَنْفَعْهُ الْأَسَفُ بَعْدَ هُجُومِهَا","غرر الحكم ودرر الكلم"],["مِنْ أَعْظَمِ الْمَكْرِ تَحْسِينُ الشَّرِّ","غرر الحكم ودرر الكلم"],["لَا أَمَانَةَ لِمَكُورٍ","غرر الحكم ودرر الكلم"],["لا يَحِيقُ الْمَكْرُ السَّيِّئُ إِلَّا بِأَهْلِهِ","غرر الحكم ودرر الكلم"]]
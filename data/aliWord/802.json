{
"text": "لِكُلِّ حَسَنَةٍ ثَوابٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ امْرِى ءٍ يَوْمٌ لا يَعْدُوهُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ أَحدٍ سائِقٌ مِنْ أَجَلِه يَحْدُوهُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ مُصابٍ اصْطِبارٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ أَجَلٍ حُضُورٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ أَمَلٍ غُرُورٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ ناكِثٍ شُبْهَةٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ دَوْلَةٍ بُرْهَةٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ حَيٍّ مَوْتٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ شَيْ ءٍ فَوْتٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ هَمٍّ فَرَجٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ ضيقٍ مَخْرَجٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ حَيٍّ داءٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ عِلَّةٍ دواءٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ شَيْ ءٍ بَذْرٌ وَ بَذْرُ الشَّرِّ الشَّرَهُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ مُثْنٍ عَلى مَنْ أَثْنى عَلَيْهِ مَثُوبَةٌ مِنْ جَزاءٍ أَوْ عارِفَةٌ مِنْ عَطاءٍ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ عَمَلٍ جَزاءٌ فَاجْعَلُوا عَمَلَكُمْ لِما يَبْقى وَ ذَرُوا ما يَفْنى.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ ظالِمٍ عُقُوبَةٌ لا تَعْدُوهُ وَ صَرْعةٌ لا تَخْطوهُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ ظاهِرٍ باطِنٌ عَلى مِثالِه فَما طابَ ظاهِرُهُ طابَ باطِنُهُ وَ ما خَبُثَ ظاهِرُهُ خَبُثَ باطِنُهُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ سَيِّئَةٍ عِقابٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ غَيْبَةٍ إِيابٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ نَفْسٍ حَمامٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ ظالِمٍ انْتِقامٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ امْرِى ءٍ أَدَبٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ شَيْ ءٍ سَبَبٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ ضَلَّةٍ عِلَّةٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ كَثْرَةٍ قِلَّةٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ كَبِدٍ حُرْقَةٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ جَمْعٍ فُرْقَةٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ مَقامٍ مَقالٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ أَمْرٍ مَآلٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ شَيْ ءٍ مِنَ الدُّنْيا انْقِضاءٌ |وَ فَناءٌ|.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ شَيْ ءٍ مِنَ الْاخِرَةِ |خُلودٌ وَ| بَقاءٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ شَيْ ءٍ زَكاةٌ وَ زَكاةُ الْعَقْلِ احْتِمالُ الْجُهّالِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ شَيْ ءٍ فَضِيْلَةٌ وَ فَضِيْلَةٌ الْكَرَمِ إِصْطِناعُ الرِّجَالِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ دينٍ خُلُقٌ وَ خُلُقُ الْإِيْمان الرِّفْقُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ شَيْ ءٍ آفَةٌ وَ آفَةُ الْخَيرِ قَرينُ السّوْءِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ شَيْ ءٍ نَكَدٌ وَ نَكَدُ الْعُمْرِ مُقارَنَةُ الْعَدُوِّ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ أَمْرٍ عاقِبَةٌ حُلْوَةٌ أَوْ مُرَّةٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ رِزْقٍ سَبَبٌ فَأَجْمِلُوا فِي الطَّلَبِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لُكُلِّ إِنْسانٍ أَرَبٌ فَابْعُدُوا عَنِ الرَّيْبِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ داخِلٍ دَهْشَةٌ فَابْدَؤا بِالسَّلامِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ قادِمٍ حَيْرَةٌ فَابْسُطُوهُ بِالْكَلامِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ شَيْ ءٍ بَذْرٌ وَ بَذْرُ الْعَداوَةِ الْمُِزاحُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ أَمْرٍ عاقِبَةٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ حَياةٍ صائِبَةٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ إِقْبالٍ إِدْبارٌ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ زَمانٍ قُوتٌ وَ أَنْتَ قُوْتُ الْمَوْتِ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ شَيْ ءٍ ثَمَرَةٌ وَ ثَمَرَةُ الْمَعْرُوفِ تَعْجيلُهُ.",
"source": "عيون الحكم والمواعظ"
},
{
"text": "لِكُلِّ ناجِمٍ أُفُولٌ وَ لِكُلِّ داخِلٍ دَهْشَةٌ وَ ذُهُولٌ.",
"source": "عيون الحكم والمواعظ"
}
]
}
[["الْبَاطِلُ مُضَادُّ الْحَقِّ","غرر الحكم ودرر الكلم"],["الْبَاطِلُ غُرُورٌ خَادِعٌ","غرر الحكم ودرر الكلم"],["الْبَاطِلُ أَضْعَفُ نَصِيرٍ","غرر الحكم ودرر الكلم"],["التَّظَافُرُ [التَّظَفُّرُ] عَلَى نَصْرِ الْبَاطِلِ لُؤْمٌ وَخِيَانَةٌ","غرر الحكم ودرر الكلم"],["ظَلَمَ الْحَقَّ مَنْ نَصَرَ الْبَاطِلَ","غرر الحكم ودرر الكلم"],["غَرَضُ الْمُبْطِلِ الْفَسَادُ","غرر الحكم ودرر الكلم"],["كَيْفَ يَنْفَصِلُ عَنِ الْبَاطِلِ مَنْ لَمْ يَتَّصِلْ بِالْحَقِّ","غرر الحكم ودرر الكلم"],["لِلْبَاطِلِ جَوْلَةٌ [دَوْلَةٌ]","غرر الحكم ودرر الكلم"],["مَنْ كَانَ غَرَضُهُ الْبَاطِلَ لَمْ يُدْرِكِ الْحَقَّ وَلَوْ كَانَ أَشْهَرَ مِنَ الشَّمْسِ","غرر الحكم ودرر الكلم"],["مَا أَقْبَحَ الْبَاطِلَ","غرر الحكم ودرر الكلم"],["الْبَاطِلُ يَزِلُّ بِرَاكِبِهِ","غرر الحكم ودرر الكلم"],["الْأَبَاطِيلُ مُوقِعَةٌ فِي الْأَضَالِيلِ","غرر الحكم ودرر الكلم"],["مَنْ رَكِبَ الْبَاطِلَ نَدِمَ","غرر الحكم ودرر الكلم"],["مَنْ نَصَرَ الْبَاطِلَ خَسِرَ","غرر الحكم ودرر الكلم"],["مَنْ نَصَرَ الْبَاطِلَ نَدِمَ","غرر الحكم ودرر الكلم"],["مَنْ رَكِبَ الْبَاطِلَ أَهْلَكَهُ مَرْكَبُهُ","غرر الحكم ودرر الكلم"],["مَنْ رَكِبَ الْبَاطِلَ زَلَّ قَدَمُهُ","غرر الحكم ودرر الكلم"],["مَنِ انْتَصَرَ بِأَعْدَاءِ اللَّهِ اسْتَحَقَّ الْخِذْلَانَ [اسْتَوْجَبَ الْخِذْلَانَ‏]","غرر الحكم ودرر الكلم"],["مُسْتَعْمِلُ الْبَاطِلِ مُعَذَّبٌ مَلُومٌ","غرر الحكم ودرر الكلم"],["لَا يَعِزُّ مَنْ لَجَأَ إِلَى الْبَاطِلِ","غرر الحكم ودرر الكلم"]]
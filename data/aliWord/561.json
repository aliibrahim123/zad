[["بِئْسَ الِاسْتِعْدَادُ الِاسْتِبْدَادُ","غرر الحكم ودرر الكلم"],["لِلَّهِ سُبْحَانَهُ حُكْمٌ بَيِّنٌ فِي الْمُسْتَأْثِرِ وَالْجَازِعِ","غرر الحكم ودرر الكلم"],["مَنْ مَلَكَ اسْتَأْثَرَ","غرر الحكم ودرر الكلم"],["مَنْ قَنِعَ بِرَأْيِهِ فَقَدْ هَلَكَ","غرر الحكم ودرر الكلم"],["مَنِ اسْتَغْنَى بِعَقْلِهِ ضَلَّ","غرر الحكم ودرر الكلم"],["مَنِ اسْتَبَدَّ بِرَأْيِهِ زَلَّ","غرر الحكم ودرر الكلم"],["مَنِ اسْتَبَدَّ بِرَأْيِهِ خَفَّتْ وَطْأَتُهُ عَلَى أَعْدَائِهِ","غرر الحكم ودرر الكلم"],["مَنِ اسْتَبَدَّ بِرَأْيِهِ [فَقَدْ] خَاطَرَ وَغَرَّرَ","غرر الحكم ودرر الكلم"]]
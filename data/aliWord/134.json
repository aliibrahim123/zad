[["الْكُفْرُ خِذْلَانٌ","غرر الحكم ودرر الكلم"],["الْإِشْرَاكُ كُفْرٌ","غرر الحكم ودرر الكلم"],["الْكُفْرُ مَغْرَمٌ","غرر الحكم ودرر الكلم"],["الْكُفْرُ يَمْحَاهُ [يَمْحُوهُ‏] الْإِيمَانُ","غرر الحكم ودرر الكلم"],["أَضَرُّ شَيْ‏ءٍ الشِّرْكُ","غرر الحكم ودرر الكلم"],["سَبَبُ الْهَلَاكِ الشِّرْكُ","غرر الحكم ودرر الكلم"],["غَايَةُ الْكَافِرِ النَّارُ","غرر الحكم ودرر الكلم"]]
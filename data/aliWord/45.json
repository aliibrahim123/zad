[["الْفِكْرُ رُشْدٌ الْغَفْلَةُ فَقْدٌ","غرر الحكم ودرر الكلم"],["الْفِكْرُ يَهْدِي إِلَى الرَّشَادِ","غرر الحكم ودرر الكلم"],["الْفِكْرُ يَهْدِي إِلَى الرُّشْدِ","غرر الحكم ودرر الكلم"],["الْفِكْرُ أَحَدُ الْهِدَايَتَيْنِ","غرر الحكم ودرر الكلم"],["كَفَى بِالْفِكْرِ رُشْداً","غرر الحكم ودرر الكلم"],["لَا رُشْدَ كَالْفِكْرِ","غرر الحكم ودرر الكلم"],["الْفِكْرُ يَهْدِي الصِّدْقُ يُنْجِي","غرر الحكم ودرر الكلم"]]
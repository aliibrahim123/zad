[["الْحِقْدُ يُذْرِي [يدوى‏]","غرر الحكم ودرر الكلم"],["الْحِقْدُ مَثَارُ الْغَضَبِ","غرر الحكم ودرر الكلم"],["الْحَقُودُ لَا رَاحَةَ لَهُ","غرر الحكم ودرر الكلم"],["الْحَقُودُ مُعَذِّبُ النَّفْسِ مُتَضَاعِفُ الْهَمِّ","غرر الحكم ودرر الكلم"],["ثَلَاثٌ لَا يَهْنَأُ لِصَاحِبِهِنَّ عَيْشٌ الْحِقْدُ وَالْحَسَدُ وَسُوءُ الْخُلُقِ","غرر الحكم ودرر الكلم"],["دَعِ الْحَسَدَ وَالْكَذِبَ وَالْحِقْدَ فَإِنَّهُنَّ ثَلَاثَةٌ تَشِينُ الدِّينَ وَتُهْلِكُ الرَّجُلَ","غرر الحكم ودرر الكلم"],["سَبَبُ الْفِتَنِ الْحِقْدُ","غرر الحكم ودرر الكلم"],["مَنْ كَثُرَ حِقْدُهُ قَلَّ عِتَابُهُ","غرر الحكم ودرر الكلم"],["مَنْ زَرَعَ الْإِحَنَ حَصَدَ الْمِحَنَ","غرر الحكم ودرر الكلم"],["مَا أَنْكَدَ عَيْشَ الْحَقُودِ","غرر الحكم ودرر الكلم"],["لَا مَوَدَّةَ لِحَقُودٍ","غرر الحكم ودرر الكلم"],["لَا يَكُونُ الْكَرِيمُ حَقُوداً","غرر الحكم ودرر الكلم"]]
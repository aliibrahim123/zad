[["الْوَقَارُ حِلْيَةُ الْعَقْلِ","غرر الحكم ودرر الكلم"],["الْوَقَارُ يُنْجِدُ [نتيجة] الْحِلْمَ","غرر الحكم ودرر الكلم"],["السَّكِينَةُ عُنْوَانُ الْعَقْلِ","غرر الحكم ودرر الكلم"],["الْوَقَارُ بُرْهَانُ النُّبْلِ","غرر الحكم ودرر الكلم"],["إِنَّ الْمُسْلِمِينَ [الْمُؤْمِنِينَ‏] مُسْتَكِينُونَ","غرر الحكم ودرر الكلم"],["جَمَالُ الرَّجُلِ الْوَقَارُ","غرر الحكم ودرر الكلم"],["عَلَيْكَ بِالسَّكِينَةِ فَإِنَّهَا أَفْضَلُ زِينَةٍ","غرر الحكم ودرر الكلم"],["كُنْ فِي الْمَلَإِ وَقُوراً","غرر الحكم ودرر الكلم"],["نِعْمَ الشِّيمَةُ السَّكِينَةُ","غرر الحكم ودرر الكلم"],["نِعْمَ الشِّيمَةُ الْوَقَارُ","غرر الحكم ودرر الكلم"],["وَقَارُ الرَّجُلِ يَزِينُهُ وَخُرْقُهُ يَشِينُهُ","غرر الحكم ودرر الكلم"],["وَقَارُ الشَّيْبِ أَحَبُّ إِلَيَّ مِنْ نَضَارَةِ الشَّبَابِ","غرر الحكم ودرر الكلم"],["يُسْتَدَلُّ عَلَى عَقْلِ الرَّجُلِ بِكَثْرَةِ وَقَارِهِ وَحُسْنِ احْتِمَالِهِ وَعَلَى كَرَمِ أَصْلِهِ بِحُسْنِ أَفْعَالِهِ","غرر الحكم ودرر الكلم"],["إِنْ تَوَقَّرْتَ [توفرت‏] أُكْرِمْتَ","غرر الحكم ودرر الكلم"],["بِالْوَقَارِ تَكْثُرُ الْهَيْبَةُ","غرر الحكم ودرر الكلم"],["مَنْ تَوَقَّرَ وُقِّرَ","غرر الحكم ودرر الكلم"],["مَنْ كَثُرَ وَقَارُهُ كَثُرَتْ جَلَالَتُهُ","غرر الحكم ودرر الكلم"],["مُلَازَمَةُ الْوَقَارِ تُؤْمِنُ دَنَاءَةَ الطَّيْشِ","غرر الحكم ودرر الكلم"],["وَقَارُ الشَّيْبِ نُورٌ وَزِينَةٌ وَقَارُ الرَّجُلِ نُورٌ وَزِينَةٌ","غرر الحكم ودرر الكلم"],["الْأَنَاةُ حَسَنٌ","غرر الحكم ودرر الكلم"],["فِي الْأَنَاةِ السَّلَامَةُ","غرر الحكم ودرر الكلم"]]
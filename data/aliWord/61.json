[["الْعِلْمُ حَيَاةٌ الْإِيمَانُ نَجَاةٌ","غرر الحكم ودرر الكلم"],["الْعِلْمُ حَيَاةٌ وَشِفَاءٌ","غرر الحكم ودرر الكلم"],["الْعِلْمُ إِحْدَى الْحَيَاتَيْنِ","غرر الحكم ودرر الكلم"],["الْعِلْمُ مُحْيِي النَّفْسِ وَمُنِيرُ الْعَقْلِ وَمُمِيتُ الْجَهْلِ","غرر الحكم ودرر الكلم"],["اكْتَسِبُوا الْعِلْمَ يُكْسِبْكُمُ الْحَيَاةَ","غرر الحكم ودرر الكلم"],["بِالْعِلْمِ تَكُونُ الْحَيَاةُ","غرر الحكم ودرر الكلم"]]
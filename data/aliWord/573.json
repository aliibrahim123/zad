[["الْغِشُّ سَجِيَّةُ الْمَرَدَةِ","غرر الحكم ودرر الكلم"],["الْغِشُّ يَكْسِبُ الْمَسَبَّةَ","غرر الحكم ودرر الكلم"],["الْغِشُّ شَرُّ الْمَكْرِ","غرر الحكم ودرر الكلم"],["الْغِشُّ مِنْ أَخْلَاقِ اللِّئَامِ","غرر الحكم ودرر الكلم"],["أَفْظَعُ الْغِشِّ غِشُّ الْأَئِمَّةِ","غرر الحكم ودرر الكلم"],["شَرُّ النَّاسِ مَنْ يَغُشُّ النَّاسَ","غرر الحكم ودرر الكلم"]]
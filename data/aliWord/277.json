[["الْوَجَلُ شِعَارُ الْمُؤْمِنِينَ","غرر الحكم ودرر الكلم"],["الْخَشْيَةُ مِنْ عَذَابِ اللَّهِ شِيمَةُ الْمُتَّقِينَ","غرر الحكم ودرر الكلم"],["إِنَّ الْمُؤْمِنِينَ خَائِفُونَ","غرر الحكم ودرر الكلم"],["إِنَّ الْمُؤْمِنِينَ وَجِلُونَ","غرر الحكم ودرر الكلم"],["إِذَا اصْطَفَى اللَّهُ عَبْداً جَلْبَبَهُ خَشْيَتَهُ","غرر الحكم ودرر الكلم"],["خَشْيَةُ اللَّهِ جِمَاعُ الْإِيمَانِ","غرر الحكم ودرر الكلم"]]
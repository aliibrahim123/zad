[["الْكَذِبُ عَدُوُّ الصِّدْقِ","غرر الحكم ودرر الكلم"],["الْخَرَسُ خَيْرٌ مِنَ الْكَذِبِ","غرر الحكم ودرر الكلم"],["الْكَذِبُ مُجَانِبُ الْإِيمَانِ","غرر الحكم ودرر الكلم"],["الْكَذِبُ شَيْنُ الْأَخْلَاقِ","غرر الحكم ودرر الكلم"],["الْكَذِبُ شَيْنُ اللِّسَانِ","غرر الحكم ودرر الكلم"],["الْكَذِبُ وَالْخِيَانَةُ لَيْسَا مِنْ أَخْلَاقِ الْكِرَامِ","غرر الحكم ودرر الكلم"],["الْكَذِبُ زَوَالُ الْمَنْطِقِ عَنِ الْوَضْعِ الْإِلَهِيِّ","غرر الحكم ودرر الكلم"],["أَقْبَحُ الْخَلَائِقِ الْكَذِبُ","غرر الحكم ودرر الكلم"],["أَقْبَحُ شَيْ‏ءٍ الْإِفْكُ","غرر الحكم ودرر الكلم"],["أَكْثَرُ شَيْ‏ءٍ الْكَذِبُ وَالْخِيَانَةُ","غرر الحكم ودرر الكلم"],["آفَةُ النَّقْلِ كَذِبُ الرِّوَايَةِ","غرر الحكم ودرر الكلم"],["آفَةُ الْحَدِيثِ الْكَذِبُ","غرر الحكم ودرر الكلم"],["بِالْكَذِبِ يَتَزَيَّنُ أَهْلُ النِّفَاقِ","غرر الحكم ودرر الكلم"],["بِئْسَ الْمَنْطِقُ الْكَذِبُ","غرر الحكم ودرر الكلم"],["شَرُّ الْأَخْلَاقِ الْكَذِبُ وَالنِّفَاقُ","غرر الحكم ودرر الكلم"],["شَرُّ الرِّوَايَاتِ أَكْثَرُهَا إِفْكاً","غرر الحكم ودرر الكلم"],["شَرُّ الشِّيَمِ الْكَذِبُ ","غرر الحكم ودرر الكلم"],["عِلَّةُ الْكَذِبِ شَرُّ عِلَّةٍ وَزَلَّةُ الْمُتَوَقِّي أَشَدُّ زَلَّةٍ","غرر الحكم ودرر الكلم"],["كَيْفَ يَسْلَمُ مِنْ عَذَابِ اللَّهِ الْمُتَسَرِّعُ إِلَى الْيَمِينِ الْفَاجِرَةِ","غرر الحكم ودرر الكلم"],["لَوْ تَمَيَّزَتِ الْأَشْيَاءُ لَكَانَ الصِّدْقُ مَعَ الشَّجَاعَةِ وَكَانَ الْجُبْنُ مَعَ الْكَذِبِ","غرر الحكم ودرر الكلم"],["لَيْسَ الْكَذِبُ مِنْ خَلَائِقِ الْإِسْلَامِ","غرر الحكم ودرر الكلم"],["مَا كَذَبَ عَاقِلٌ وَلَا زَنَى [خَانَ‏] مُؤْمِنٌ","غرر الحكم ودرر الكلم"],["مَا أَقْبَحَ الْكَذِبَ بِذَوِي الْفَضْلِ","غرر الحكم ودرر الكلم"],["نَكَدُ الْعِلْمِ الْكَذِبُ وَنَكَدُ الْجَدِّ اللَّعِبُ","غرر الحكم ودرر الكلم"],["لَا شِيمَةَ أَقْبَحُ مِنَ الْكَذِبِ","غرر الحكم ودرر الكلم"],["لَا خَيْرَ فِي الْكَذَّابِينَ وَلَا فِي الْعُلَمَاءِ الْأَفَّاكِينَ","غرر الحكم ودرر الكلم"]]
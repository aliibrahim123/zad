[["الْعَقْلُ قُرْبَةٌ الْحُمْقُ غُرْبَةٌ","غرر الحكم ودرر الكلم"],["الْعَقْلُ شِفَاءٌ","غرر الحكم ودرر الكلم"],["الْعَقْلُ يُحْسِنُ [يُصْلِحُ‏] الرَّوِيَّةَ","غرر الحكم ودرر الكلم"],["الْعَقْلُ يُوجِبُ الْحَذَرَ","غرر الحكم ودرر الكلم"],["الْعَقْلُ حَيْثُ كَانَ آلَفَ مَأْلُوفٍ","غرر الحكم ودرر الكلم"],["الْعَقْلُ فِي الْغُرْبَةِ قُرْبَةٌ","غرر الحكم ودرر الكلم"],["اعْقِلْ تُدْرِكْ","غرر الحكم ودرر الكلم"],["أَسْعَدُ النَّاسِ الْعَاقِلُ","غرر الحكم ودرر الكلم"],["أَسْعَدُ النَّاسِ الْعَاقِلُ","غرر الحكم ودرر الكلم"],["أَصْلُ الْعَقْلِ الْفِكْرُ وَثَمَرَتُهُ السَّلَامَةُ","غرر الحكم ودرر الكلم"],["أَدْرَكُ النَّاسِ لِحَاجَتِهِ ذُو الْعَقْلِ الْمُتَرَفِّقِ","غرر الحكم ودرر الكلم"],["إِنَّ بِذَوِي الْعُقُولِ مِنَ الْحَاجَةِ إِلَى الْأَدَبِ كَمَا يَظْمَأُ الزَّرْعُ إِلَى الْمَطَرِ","غرر الحكم ودرر الكلم"],["إِذَا تَمَّ الْعَقْلُ نَقَصَ الْكَلَامُ","غرر الحكم ودرر الكلم"],["بِالْعَقْلِ يُسْتَخْرَجُ غَوْرُ الْحِكْمَةِ","غرر الحكم ودرر الكلم"],["بِالْعَقْلِ تُنَالُ الْخَيْرَاتُ","غرر الحكم ودرر الكلم"],["بِوُفُورِ الْعَقْلِ يَتَوَفَّرُ الْحِلْمُ","غرر الحكم ودرر الكلم"],["بِالْعَقْلِ كَمَالُ النَّفْسِ","غرر الحكم ودرر الكلم"],["ثَمَرَةُ الْعَقْلِ الِاسْتِقَامَةُ","غرر الحكم ودرر الكلم"],["ثَمَرَةُ الْعَقْلِ لُزُومُ الْحَقِّ","غرر الحكم ودرر الكلم"],["ثَمَرَةُ الْعَقْلِ صُحْبَةُ الْأَخْيَارِ","غرر الحكم ودرر الكلم"],["ثَمَرَةُ الْعَقْلِ الْعَمَلُ لِلنَّجَاةِ","غرر الحكم ودرر الكلم"],["ثَمَرَةُ الْعَقْلِ مُدَارَاةُ النَّاسِ","غرر الحكم ودرر الكلم"],["ثَمَرَةُ الْعَقْلِ الصِّدْقُ","غرر الحكم ودرر الكلم"],["ثَمَرَةُ الْعَقْلِ مَقْتُ الدُّنْيَا وَقَمْعُ الْهَوَى","غرر الحكم ودرر الكلم"],["حِفْظُ الْعَقْلِ بِمُخَالَفَةِ الْهَوَى وَالْعُزُوفِ عَنِ الدُّنْيَا","غرر الحكم ودرر الكلم"],["زِيَادَةُ الْعَقْلِ تُنْجِي","غرر الحكم ودرر الكلم"],["غَرِيزَةُ الْعَقْلِ تَأْبَى ذَمِيمَ الْفِعْلِ","غرر الحكم ودرر الكلم"],["غِطَاءُ الْعُيُوبِ الْعَقْلُ","غرر الحكم ودرر الكلم"],["كَمْ مِنْ ذَلِيلٍ أَعَزَّهُ عَقْلُهُ","غرر الحكم ودرر الكلم"],["كُلَّمَا ازْدَادَ عَقْلُ الرَّجُلِ قَوِيَ إِيمَانُهُ بِالْقَدَرِ وَاسْتَخَفَّ بِالْغِيَرِ","غرر الحكم ودرر الكلم"],["لِلْحَازِمِ مِنْ عَقْلِهِ عَنْ كُلِّ دَنِيَّةٍ [مِنْ كُلِّ دَنِيَّةٍ] زَاجِرٌ","غرر الحكم ودرر الكلم"],["لَنْ يَنْجَعَ الْأَدَبُ حَتَّى يُقَارِنَهُ الْعَقْلُ","غرر الحكم ودرر الكلم"],["لَوْ عَقَلَ الْمَرْءُ عَقْلَهُ لَأَحْرَزَ سِرَّهُ عَمَّنْ أَفْشَاهُ إِلَيْهِ وَلَمْ يُطْلِعْ أَحَداً عَلَيْهِ","غرر الحكم ودرر الكلم"],["مَنْ عَقَلَ عَفَّ","غرر الحكم ودرر الكلم"],["مَنْ عَقَلَ اسْتَقَالَ [اسْتَنَالَ‏]","غرر الحكم ودرر الكلم"],["مَنِ اسْتَعَانَ بِالْعَقْلِ سَدَّدَهُ","غرر الحكم ودرر الكلم"],["مَنْ قَدَّمَ عَقْلَهُ عَلَى هَوَاهُ حَسُنَتْ مَسَاعِيهِ","غرر الحكم ودرر الكلم"],["لَا عَقْلَ كَالتَّجَاهُلِ","غرر الحكم ودرر الكلم"],["لَا أَشْجَعَ مِنْ لَبِيبٍ","غرر الحكم ودرر الكلم"],["لَا يَحْلُمُ عَنِ السَّفِيهِ إِلَّا الْعَاقِلُ","غرر الحكم ودرر الكلم"],["لَا يَزْكُو عِنْدَ اللَّهِ سُبْحَانَهُ إِلَّا عَقْلٌ عَارِفٌ وَنَفْسٌ عَزُوفٌ","غرر الحكم ودرر الكلم"],["لِلْقُلُوبِ خَوَاطِرُ سُوءٍ وَالْعُقُولُ تَزْجُرُ عَنْهَا","غرر الحكم ودرر الكلم"]]
[["الْعَقْلُ زَيْنٌ الْحُمْقُ شَيْنٌ","غرر الحكم ودرر الكلم"],["الْعَقْلُ زَيْنٌ لِمَنْ رُزِقَهُ","غرر الحكم ودرر الكلم"],["زَيْنُ الدِّينِ الْعَقْلُ","غرر الحكم ودرر الكلم"],["لَا جَمَالَ أَزْيَنُ مِنَ الْعَقْلِ","غرر الحكم ودرر الكلم"],["الْعَقْلُ أَجْمَلُ زِينَةٍ وَالْعِلْمُ أَشْرَفُ مَزِيَّةٍ","غرر الحكم ودرر الكلم"],["الْعَقْلُ أَحْسَنُ حِلْيَةٍ","غرر الحكم ودرر الكلم"],["الْعَقْلُ أَشْرَفُ مَزِيَّةٍ","غرر الحكم ودرر الكلم"],["إِنَّمَا الشَّرَفُ بِالْعَقْلِ وَالْأَدَبِ لَا بِالْمَالِ وَالْحَسَبِ","غرر الحكم ودرر الكلم"]]
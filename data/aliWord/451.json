"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الْمُصِيبَةُ بِالصَّبْرِ أَعْظَمُ الْمُصَابِ [الْمَصَائِبِ‏]",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الصَّبْرُ أَعْوَنُ شَيْ‏ءٍ عَلَى الدَّهْرِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الصَّبْرُ خَيْرُ جُنُودِ الْمُؤْمِنِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "أَوَّلُ الْعِبَادَةِ انْتِظَارُ الْفَرَجِ بِالصَّبْرِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الصَّبْرُ مِلَاكٌ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الصَّبْرُ أَوَّلُ لَوَازِمِ الْإِتْقَانِ [الْإِيقَانِ‏]",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الصَّبْرُ أَحَدُ الظَّفَرَيْنِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الصَّبْرُ أَفْضَلُ سَجِيَّةٍ وَالْعِلْمُ أَشْرَفُ حِلْيَةٍ وَعَطِيَّةٍ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الصَّبْرُ أَنْ يَحْتَمِلَ الرَّجُلُ مَا يَنُوبُهُ وَيَكْظِمَ مَا يُغْضِبُهُ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الصَّبْرُ أَحْسَنُ خلل [حُلَلِ‏] الْإِيمَانِ وَأَشْرَفُ خَلَائِقِ الْإِنْسَانِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "الْزَمُوا الصَّبْرَ فَإِنَّهُ دِعَامَةُ الْإِيمَانِ وَمِلَاكُ الْأُمُورِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "أَفْضَلُ الصَّبْرِ التَّصَبُّرُ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "أَصْلُ الصَّبْرِ حُسْنُ الْيَقِينِ بِاللَّهِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "إِنَّ أَحْمَدَ الْأُمُورِ عَاقِبَةُ الصَّبْرِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "إِنْ صَبَرْتَ جَرَى عَلَيْكَ الْقَلَمُ وَأَنْتَ مَأْجُورٌ وَإِنْ جَزِعْتَ جَرَى عَلَيْكَ الْقَلَمُ وَأَنْتَ مَأْزُورٌ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "إِنْ صَبَرْتَ صَبْرَ الْأَحْرَارِ وَإِلَّا سَلَوْتَ سُلُوَّ الْأَغْمَارِ [الْأَعْمَارِ]",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "إِنْ صَبَرْتَ صَبْرَ الْأَكَارِمِ وَإِلَّا سَلَوْتَ سُلُوَّ الْبَهَائِمِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "ثَوَابُ الصَّبْرِ أَعْلَى الثَّوَابِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "حُسْنُ الصَّبْرِ عَوْنٌ عَلَى كُلِّ أَمْرٍ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "حُسْنُ الصَّبْرِ مِلَاكُ كُلِّ أَمْرٍ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "زَيْنُ الدِّينِ الصَّبْرُ وَالرِّضَا",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "ضَادُّوا الْجَزَعَ بِالصَّبْرِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "طُوبَى لِمَنْ جَعَلَ الصَّبْرَ مَطِيَّةَ نَجَاتِهِ وَالتَّقْوَى عُدَّةَ وَفَاتِهِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "رَحِمَ اللَّهُ امْرَأً جَعَلَ الصَّبْرَ مَطِيَّةَ حَيَاتِهِ وَالتَّقْوَى عُدَّةَ وَفَاتِهِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "طُولُ الِاصْطِبَارِ مِنْ شِيَمِ الْأَبْرَارِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "عَلَيْكَ بِالصَّبْرِ فَإِنَّهُ حِصْنٌ حَصِينٌ وَعِبَادَةُ الْمُوقِنِينَ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "عَلَيْكَ بِالصَّبْرِ فَبِهِ يَأْخُذُ الْعَاقِلُ وَإِلَيْهِ يَرْجِعُ الْجَاهِلُ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "عَلَيْكَ بِلُزُومِ الصَّبْرِ فَبِهِ يَأْخُذُ الْحَازِمُ وَإِلَيْهِ يَئُولُ الْجَازِعُ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "عِنْدَ الصَّدْمَةِ الْأُولَى يَكُونُ صَبْرُ النُّبَلَاءِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "قَدْ يَعِزُّ الصَّبْرُ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "مَنْ لَمْ يُنْجِهِ الصَّبْرُ أَهْلَكَهُ الْجَزَعُ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "مَنِ انْتَظَرَ الْعَاقِبَةَ [الْعَافِيَةَ] صَبَرَ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "مَنْ تَوَالَتْ عَلَيْهِ نَكَبَاتُ الزَّمَانِ اكْتَسَبَتْهُ فَضِيلَةُ الصَّبْرِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "مَا صَبَرْتَ عَنْهُ خَيْرٌ مِمَّا الْتَذَذْتَ بِهِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "مَا أَحْسَنَ بِالْإِنْسَانِ أَنْ يَصْبِرَ عَمَّا يَشْتَهِي",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "نِعْمَ الظَّهِيرُ الصَّبْرُ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "لَا يَغْلِبِ الْحِرْصُ صَبْرَكُمْ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "لَا إِيمَانَ كَالصَّبْرِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "لَا عَوْنَ أَفْضَلُ مِنَ الصَّبْرِ",
"source": "غرر الحكم ودرر الكلم"
},
{
"text": "لَا يَتَحَقَّقُ الصَّبْرُ إِلَّا بِمُقَاسَاةِ ضِدِّ الْمَأْلُوفِ",
"source": "غرر الحكم ودرر الكلم"
}
]

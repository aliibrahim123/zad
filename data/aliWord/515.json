[["التَّكَبُّرُ يُظْهِرُ الرَّذِيلَةَ","غرر الحكم ودرر الكلم"],["الْكِبْرُ دَاعٍ إِلَى التَّقَحُّمِ فِي الذُّنُوبِ","غرر الحكم ودرر الكلم"],["الْكِبْرُ خَلِيقَةٌ مُرْدِيَةٌ مَنْ تَكَثَّرَ بِهَا قَلَّ","غرر الحكم ودرر الكلم"],["الْكِبْرُ يُسَاوِرُ الْقُلُوبَ مُسَاوَرَةَ السُّمُومِ الْقَاتِلَةِ","غرر الحكم ودرر الكلم"],["إِيَّاكَ وَالتَّجَبُّرَ عَلَى عِبَادِ اللَّهِ فَإِنَّ كُلَّ مُتَجَبِّرٍ يَقْصِمُهُ اللَّهُ","غرر الحكم ودرر الكلم"],["بِالتَّكَبُّرِ يَكُونُ الْمَقْتُ","غرر الحكم ودرر الكلم"],["بِكَثْرَةِ التَّكَبُّرِ يَكُونُ التَّلَفُ","غرر الحكم ودرر الكلم"],["تَكَبُّرُ الدَّنِيِّ يَدْعُو إِلَى إِهَانَتِهِ","غرر الحكم ودرر الكلم"],["ثَمَرَةُ الْكِبْرِ الْمَسَبَّةُ","غرر الحكم ودرر الكلم"],["قَدْ يَذِلُّ الْمُتَجَبِّرُ","غرر الحكم ودرر الكلم"],["كَفَى بِالتَّكَبُّرِ تَلَفاً","غرر الحكم ودرر الكلم"],["لَيْسَ لِمُتَكَبِّرٍ صَدِيقٌ","غرر الحكم ودرر الكلم"],["مَنْ تَجَبَّرَ كُسِرَ","غرر الحكم ودرر الكلم"],["مَنْ تَكَبَّرَ مُقِتَ","غرر الحكم ودرر الكلم"],["مَنْ كَانَ مُتَكَبِّراً لَمْ يَعْدَمِ التَّلَفَ","غرر الحكم ودرر الكلم"],["مَنْ لَبِسَ الْكِبْرَ وَالسَّرَفَ خَلَعَ الْفَضْلَ وَالشَّرَفَ","غرر الحكم ودرر الكلم"],["مَا اجْتُلِبَ الْمَقْتُ بِمِثْلِ الْكِبْرِ","غرر الحكم ودرر الكلم"],["لَا ثَنَاءَ مَعَ كِبْرٍ","غرر الحكم ودرر الكلم"],["لَا يَزْكُو عَمَلُ مُتَجَبِّرٍ","غرر الحكم ودرر الكلم"]]
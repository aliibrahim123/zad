[["أَفْكِرْ تَسْتَبْصِرْ","غرر الحكم ودرر الكلم"],["تَفَكُّرُكَ يُفِيدُكَ الِاسْتِبْصَارَ وَيَكْسِبُكَ الِاعْتِبَارَ","غرر الحكم ودرر الكلم"],["بِالاسْتِبْصَارِ يَحْصُلُ الِاعْتِبَارُ","غرر الحكم ودرر الكلم"],["رَأْسُ الِاسْتِبْصَارِ الْفِكْرَةُ","غرر الحكم ودرر الكلم"],["مَنِ اسْتَقْبَلَ الْأُمُورَ أَبْصَرَ","غرر الحكم ودرر الكلم"],["لَا بَصِيرَةَ لِمَنْ لَا فِكْرَ لَهُ","غرر الحكم ودرر الكلم"]]
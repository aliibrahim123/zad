[["الْحَرِيصُ [الحرص‏] تَعِبٌ","غرر الحكم ودرر الكلم"],["الْحِرْصُ مَطِيَّةُ التَّعَبِ","غرر الحكم ودرر الكلم"],["الْحَرِيصُ مَتْعُوبٌ فِيمَا يَضُرُّهُ","غرر الحكم ودرر الكلم"],["الْحِرْصُ ذُلٌّ وَعَنَاءٌ","غرر الحكم ودرر الكلم"],["الْحِرْصُ عَنَاءٌ مُؤَبَّدٌ","غرر الحكم ودرر الكلم"],["إِنَّ فِي الْحِرْصِ لَعَنَاءً","غرر الحكم ودرر الكلم"],["بِالْحِرْصِ يَكُونُ الْعَنَاءُ","غرر الحكم ودرر الكلم"],["ثَمَرَةُ الْحِرْصِ الْعَنَاءُ","غرر الحكم ودرر الكلم"],["ثَمَرَةُ الْحِرْصِ النَّصَبُ","غرر الحكم ودرر الكلم"],["فِي الْحِرْصِ الْعَنَاءُ","غرر الحكم ودرر الكلم"],["فِي الْحِرْصِ الشَّقَاءُ وَالنَّصَبُ","غرر الحكم ودرر الكلم"],["قُرِنَ الْحِرْصُ بِالْعَنَاءِ","غرر الحكم ودرر الكلم"],["كُلُّ شَرِهٍ مُعَنًّى","غرر الحكم ودرر الكلم"],["مَنْ حَرَصَ شَقَى وَتَعَنَّى","غرر الحكم ودرر الكلم"],["مَا أَجْلَبَ الْحِرْصَ لِلنَّصَبِ","غرر الحكم ودرر الكلم"],["لَا يُلْقَى الْحَرِيصُ مُسْتَرِيحاً","غرر الحكم ودرر الكلم"],["لَيْسَ كُلُّ مَنْ طَلَبَ وَجَدَ","غرر الحكم ودرر الكلم"],["لَا تُخَاطِرْ [لَا تخارن‏] بِشَيْ‏ءٍ رَجَاءَ أَكْثَرَ مِنْهُ","غرر الحكم ودرر الكلم"]]
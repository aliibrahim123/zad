[["قَدْ يَزِلُّ الرَّأْيُ الْفَذُّ","غرر الحكم ودرر الكلم"],["قَدْ يَضِلُّ الْعَقْلُ الْفَذُّ","غرر الحكم ودرر الكلم"],["مَنْ خَالَفَ الْمَشُورَةَ ارْتَبَكَ","غرر الحكم ودرر الكلم"],["مَنِ اسْتَغْنَى بِعَقْلِهِ ضَلَّ","غرر الحكم ودرر الكلم"],["مَنِ اسْتَبَدَّ بِرَأْيِهِ زَلَّ","غرر الحكم ودرر الكلم"],["مَنْ جَهِلَ وُجُوهَ الْآرَاءِ أَعْيَتْهُ الْحِيَلُ ","غرر الحكم ودرر الكلم"],["مَنْ أُعْجِبَ بِرَأْيِهِ ذَلَّ","غرر الحكم ودرر الكلم"],["لَا تَسْتَبِدَّ بِرَأْيِكَ فَمَنِ اسْتَبَدَّ بِرَأْيِهِ هَلَكَ","غرر الحكم ودرر الكلم"]]